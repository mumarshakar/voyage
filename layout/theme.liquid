<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if page_title %}{{ page_title }}{% else %}{{ shop.name }}{% endif %}</title>
  
  {{ content_for_header }}
  
  <!-- Local fonts are bundled via assets/theme.css -->
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  {% comment %} theme-check-enable RemoteAsset {% endcomment %}
  <!-- Theme CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  
  <!-- Typography CSS - Must load last to override everything -->
  <style>
    {%- liquid
      # Get color theme settings with defaults
      assign color_primary_orange = settings.color_primary_orange | default: '#FF6B35'
      assign color_light_orange = settings.color_light_orange | default: '#FF8C61'
      assign color_cream = settings.color_cream | default: '#FFF8E7'
      assign color_white = settings.color_white | default: '#FFFFFF'
      
      # Get heading theme settings - use default filter (Shopify standard way)
      assign heading_color = settings.heading_color | default: '#333333'
      assign heading_font_size = settings.heading_font_size | default: 36
      assign heading_font_weight = settings.heading_font_weight | default: '600'
      assign heading_font_family = settings.heading_font_family | default: 'segoe'
      assign heading_line_height = settings.heading_line_height | default: 1.2
      assign heading_letter_spacing = settings.heading_letter_spacing | default: 0
      
      # Get subheading theme settings
      assign subheading_color = settings.subheading_color | default: '#666666'
      assign subheading_font_size = settings.subheading_font_size | default: 20
      assign subheading_font_weight = settings.subheading_font_weight | default: '400'
      assign subheading_font_family = settings.subheading_font_family | default: 'segoe'
      assign subheading_line_height = settings.subheading_line_height | default: 1.4
      assign subheading_letter_spacing = settings.subheading_letter_spacing | default: 0
      
      # Get body text theme settings
      assign body_text_color = settings.body_text_color | default: '#333333'
      assign body_font_size = settings.body_font_size | default: 16
      assign body_font_weight = settings.body_font_weight | default: '400'
      assign body_font_family = settings.body_font_family | default: 'segoe'
      assign body_line_height = settings.body_line_height | default: 1.6
      assign body_letter_spacing = settings.body_letter_spacing | default: 0
      assign body_word_spacing = settings.body_word_spacing | default: 0
      
      # Get menu theme settings
      assign menu_font_family = settings.menu_font_family | default: 'merriweather_body'
      assign menu_link_color = settings.menu_link_color | default: '#8B6F47'
      assign menu_link_hover_color = settings.menu_link_hover_color | default: '#FF6B35'
      assign menu_font_size = settings.menu_font_size | default: 16
      assign menu_font_weight = settings.menu_font_weight | default: '500'
      assign menu_link_spacing = settings.menu_link_spacing | default: 8
      assign dropdown_bg_color = settings.dropdown_bg_color | default: '#FFFFFF'
      assign dropdown_link_color = settings.dropdown_link_color | default: '#333333'
      assign dropdown_hover_bg_color = settings.dropdown_hover_bg_color | default: '#FFF8E7'
      assign dropdown_hover_color = settings.dropdown_hover_color | default: '#FF6B35'
      
      # Get button theme settings
      assign button_background_color = settings.button_background_color | default: '#FF6B35'
      assign button_text_color = settings.button_text_color | default: '#FFFFFF'
      assign button_border_color = settings.button_border_color | default: '#FF6B35'
      assign button_border_style = settings.button_border_style | default: 'solid'
      assign button_border_width = settings.button_border_width | default: 1
      assign button_hover_background_color = settings.button_hover_background_color | default: '#FF8C61'
      assign button_hover_text_color = settings.button_hover_text_color | default: '#FFFFFF'
      assign button_hover_border_color = settings.button_hover_border_color | default: '#FF8C61'
      assign button_hover_border_style = settings.button_hover_border_style | default: 'solid'
      assign button_hover_border_width = settings.button_hover_border_width | default: 1
    -%}
    
    :root {
      --primary-orange: {{ color_primary_orange }};
      --light-orange: {{ color_light_orange }};
      --cream: {{ color_cream }};
      --white: {{ color_white }};
      --button-bg-color: {{ button_background_color }};
      --button-text-color: {{ button_text_color }};
      --button-border-color: {{ button_border_color }};
      --button-border-style: {{ button_border_style }};
      --button-border-width: {{ button_border_width }}px;
      --button-hover-bg-color: {{ button_hover_background_color }};
      --button-hover-text-color: {{ button_hover_text_color }};
      --button-hover-border-color: {{ button_hover_border_color }};
      --button-hover-border-style: {{ button_hover_border_style }};
      --button-hover-border-width: {{ button_hover_border_width }}px;
      --menu-link-color: {{ menu_link_color }};
      --menu-link-hover-color: {{ menu_link_hover_color }};
      --menu-font-size: {{ menu_font_size }}px;
      --menu-font-weight: {{ menu_font_weight }};
      --menu-link-spacing: {{ menu_link_spacing }}px;
      --dropdown-bg-color: {{ dropdown_bg_color }};
      --dropdown-link-color: {{ dropdown_link_color }};
      --dropdown-hover-bg-color: {{ dropdown_hover_bg_color }};
      --dropdown-hover-color: {{ dropdown_hover_color }};
    }
    
    {%- liquid
      # Convert font family settings to CSS values
      case heading_font_family
        when 'merriweather_heading'
          assign heading_font_family_css = "'MerriweatherHeading', 'Merriweather', Georgia, serif"
        when 'playfair'
          assign heading_font_family_css = "'Playfair Display', 'Times New Roman', serif"
        when 'merriweather'
          assign heading_font_family_css = "'Merriweather', Georgia, serif"
        when 'georgia'
          assign heading_font_family_css = "Georgia, 'Times New Roman', serif"
        when 'times'
          assign heading_font_family_css = "'Times New Roman', Times, serif"
        when 'arial'
          assign heading_font_family_css = "Arial, Helvetica, sans-serif"
        when 'helvetica'
          assign heading_font_family_css = "Helvetica, Arial, sans-serif"
        when 'verdana'
          assign heading_font_family_css = "Verdana, Geneva, sans-serif"
        when 'courier'
          assign heading_font_family_css = "'Courier New', Courier, monospace"
        else
          assign heading_font_family_css = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
      endcase
      
      case subheading_font_family
        when 'merriweather_subheading'
          assign subheading_font_family_css = "'MerriweatherSubheading', 'Merriweather', Georgia, serif"
        when 'playfair'
          assign subheading_font_family_css = "'Playfair Display', 'Times New Roman', serif"
        when 'merriweather'
          assign subheading_font_family_css = "'Merriweather', Georgia, serif"
        when 'georgia'
          assign subheading_font_family_css = "Georgia, 'Times New Roman', serif"
        when 'times'
          assign subheading_font_family_css = "'Times New Roman', Times, serif"
        when 'arial'
          assign subheading_font_family_css = "Arial, Helvetica, sans-serif"
        when 'helvetica'
          assign subheading_font_family_css = "Helvetica, Arial, sans-serif"
        when 'verdana'
          assign subheading_font_family_css = "Verdana, Geneva, sans-serif"
        when 'courier'
          assign subheading_font_family_css = "'Courier New', Courier, monospace"
        else
          assign subheading_font_family_css = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
      endcase
      
      case body_font_family
        when 'merriweather_body'
          assign body_font_family_css = "'MerriweatherBody', 'Merriweather', Georgia, serif"
        when 'playfair'
          assign body_font_family_css = "'Playfair Display', 'Times New Roman', serif"
        when 'merriweather'
          assign body_font_family_css = "'Merriweather', Georgia, serif"
        when 'georgia'
          assign body_font_family_css = "Georgia, 'Times New Roman', serif"
        when 'times'
          assign body_font_family_css = "'Times New Roman', Times, serif"
        when 'arial'
          assign body_font_family_css = "Arial, Helvetica, sans-serif"
        when 'helvetica'
          assign body_font_family_css = "Helvetica, Arial, sans-serif"
        when 'verdana'
          assign body_font_family_css = "Verdana, Geneva, sans-serif"
        when 'courier'
          assign body_font_family_css = "'Courier New', Courier, monospace"
        else
          assign body_font_family_css = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
      endcase
      
      case menu_font_family
        when 'merriweather_heading'
          assign menu_font_family_css = "'MerriweatherHeading', 'Merriweather', Georgia, serif"
        when 'merriweather_subheading'
          assign menu_font_family_css = "'MerriweatherSubheading', 'Merriweather', Georgia, serif"
        when 'merriweather_body'
          assign menu_font_family_css = "'MerriweatherBody', 'Merriweather', Georgia, serif"
        else
          assign menu_font_family_css = "'MerriweatherBody', 'Merriweather', Georgia, serif"
      endcase
    -%}
    
    /* Global Typography Styles from Theme Settings - Loaded AFTER theme.css to ensure priority */
    /* Using very specific selectors to override Bootstrap and other CSS */
    html body h1, 
    html body h2, 
    html body h3, 
    html body h4, 
    html body h5, 
    html body h6,
    html body .custom-text-heading,
    /* Headings - Apply to all heading elements and classes with maximum specificity */
    html body h2.two-column-heading,
    html body h2.two-column-heading,
    html body .two-columns-section h2.two-column-heading,
    html body .two-column-text h2.two-column-heading,
    html body .two-column-text-content h2.two-column-heading,
    html body [class*="shopify-section"] h2.two-column-heading,
    html body .two-column-heading,
    html body .hero-title,
    html body .hero-glow-title,
    html body .page-title,
    html body .section-title,
    html body .custom-text-heading,
    html body main h1,
    html body main h2,
    html body main h3,
    html body main h4,
    html body main h5,
    html body main h6,
    html body .container h1,
    html body .container h2,
    html body .container h3,
    html body .container h4,
    html body .container h5,
    html body .container h6 {
      color: {{ heading_color }} !important;
      font-size: {{ heading_font_size }}px !important;
      font-weight: {{ heading_font_weight }} !important;
      font-family: {{ heading_font_family_css }} !important;
      line-height: {{ heading_line_height }} !important;
      letter-spacing: {{ heading_letter_spacing }}px !important;
    }
    
    /* Full Width Slider titles - Typography only, no color (uses per-slide colors) */
    html body .full-width-slider-title,
    html body .slide-title {
      font-size: {{ heading_font_size }}px !important;
      font-weight: {{ heading_font_weight }} !important;
      font-family: {{ heading_font_family_css }} !important;
      line-height: {{ heading_line_height }} !important;
      letter-spacing: {{ heading_letter_spacing }}px !important;
      /* Color is set inline per slide via block.settings.title_color */
    }
    
    /* Subheadings - Apply to all subheading elements and classes with maximum specificity */
    html body h3.two-column-subheading,
    html body .two-columns-section h3.two-column-subheading,
    html body .two-column-text h3.two-column-subheading,
    html body .two-column-text-content h3.two-column-subheading,
    html body [class*="shopify-section"] h3.two-column-subheading,
    html body .custom-text-subheading,
    html body .two-column-subheading,
    html body .hero-subtitle,
    html body .hero-glow-subtitle,
    html body .page-subtitle,
    html body main .custom-text-subheading,
    html body main .two-column-subheading,
    html body main .hero-subtitle,
    html body main .hero-glow-subtitle,
    html body .container .custom-text-subheading,
    html body .container .two-column-subheading,
    html body .container .hero-subtitle,
    html body .container .hero-glow-subtitle {
      color: {{ subheading_color }} !important;
      font-size: {{ subheading_font_size }}px !important;
      font-weight: {{ subheading_font_weight }} !important;
      font-family: {{ subheading_font_family_css }} !important;
      line-height: {{ subheading_line_height }} !important;
      letter-spacing: {{ subheading_letter_spacing }}px !important;
    }
    
    /* Full Width Slider subtitles - Typography only, no color (uses per-slide colors) */
    html body .full-width-slider-subtitle,
    html body .slide-subtitle {
      font-size: {{ subheading_font_size }}px !important;
      font-weight: {{ subheading_font_weight }} !important;
      font-family: {{ subheading_font_family_css }} !important;
      line-height: {{ subheading_line_height }} !important;
      letter-spacing: {{ subheading_letter_spacing }}px !important;
      /* Color is set inline per slide via block.settings.subtitle_color */
    }
    
    /* Body Text - Apply to all body text elements with maximum specificity */
    html body .two-column-body,
    html body .two-columns-section .two-column-body,
    html body .two-column-text .two-column-body,
    html body .two-column-text-content .two-column-body,
    html body [class*="shopify-section"] .two-column-body,
    html body .two-column-body p,
    html body .two-column-body *:not(h1):not(h2):not(h3):not(h4):not(h5):not(h6),
    html body,
    html body .custom-text-body,
    html body p,
    html body main p,
    html body .container p,
    html body main .custom-text-body,
    html body main .two-column-body,
    html body ul,
    html body ol,
    html body li,
    html body .custom-text-body ul,
    html body .custom-text-body ol,
    html body .custom-text-body li,
    html body .two-column-body ul,
    html body .two-column-body ol,
    html body .two-column-body li {
      color: {{ body_text_color }} !important;
      font-size: {{ body_font_size }}px !important;
      font-weight: {{ body_font_weight }} !important;
      font-family: {{ body_font_family_css }} !important;
      line-height: {{ body_line_height }} !important;
      letter-spacing: {{ body_letter_spacing }}px !important;
      word-spacing: {{ body_word_spacing }}px !important;
    }
    
    /* Menu Typography from Theme Settings */
    html body .navbar .nav-link,
    html body .navbar-nav .nav-link,
    html body .navbar .nav-link.dropdown-toggle {
      font-family: {{ menu_font_family_css }} !important;
      font-size: var(--menu-font-size) !important;
      font-weight: var(--menu-font-weight) !important;
      color: var(--menu-link-color) !important;
      transition: all 0.3s ease;
    }
    
    html body .navbar .nav-link:hover,
    html body .navbar-nav .nav-link:hover,
    html body .navbar .nav-link.dropdown-toggle:hover,
    html body .navbar .nav-link:focus,
    html body .navbar-nav .nav-link:focus,
    html body .navbar .nav-link.dropdown-toggle:focus {
      color: var(--menu-link-hover-color) !important;
    }
    
    /* Dropdown Menu Styles from Theme Settings - High Specificity to Override Bootstrap */
    html body .navbar .dropdown-menu,
    html body .navbar-nav .dropdown-menu,
    html body .nav-item .dropdown-menu,
    html body .dropdown-menu {
      background-color: var(--dropdown-bg-color) !important;
      border-color: rgba(0, 0, 0, 0.1) !important;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1) !important;
    }
    
    html body .navbar .dropdown-item,
    html body .navbar-nav .dropdown-item,
    html body .nav-item .dropdown-item,
    html body .dropdown-menu .dropdown-item,
    html body .dropdown-item {
      color: var(--dropdown-link-color) !important;
      transition: background-color 0.3s ease, color 0.3s ease !important;
      padding: 0.5rem 1rem !important;
    }
    
    html body .navbar .dropdown-item:hover,
    html body .navbar-nav .dropdown-item:hover,
    html body .nav-item .dropdown-item:hover,
    html body .dropdown-menu .dropdown-item:hover,
    html body .dropdown-item:hover,
    html body .navbar .dropdown-item:focus,
    html body .navbar-nav .dropdown-item:focus,
    html body .nav-item .dropdown-item:focus,
    html body .dropdown-menu .dropdown-item:focus,
    html body .dropdown-item:focus,
    html body .navbar .dropdown-item.active,
    html body .navbar-nav .dropdown-item.active,
    html body .nav-item .dropdown-item.active,
    html body .dropdown-menu .dropdown-item.active,
    html body .dropdown-item.active {
      background-color: var(--dropdown-hover-bg-color) !important;
      color: var(--dropdown-hover-color) !important;
    }
    
    /* Header icon styles from theme settings */
    html body .header-icon {
      color: var(--menu-link-color) !important;
    }
    
    html body .header-icon:hover {
      color: var(--menu-link-hover-color) !important;
    }
    
    /* Global Button Styles from Theme Settings */
    html body .btn,
    html body button,
    html body input[type="submit"],
    html body input[type="button"],
    html body .btn-primary,
    html body .btn-secondary,
    html body .btn-success,
    html body .btn-danger,
    html body .btn-warning,
    html body .btn-info,
    html body .btn-light,
    html body .btn-dark,
    html body .btn-link {
      background-color: var(--button-bg-color) !important;
      color: var(--button-text-color) !important;
      border-color: var(--button-border-color) !important;
      border-style: var(--button-border-style) !important;
      border-width: var(--button-border-width) !important;
      transition: all 0.3s ease;
    }
    
    html body .btn:hover,
    html body button:hover,
    html body input[type="submit"]:hover,
    html body input[type="button"]:hover,
    html body .btn-primary:hover,
    html body .btn-secondary:hover,
    html body .btn-success:hover,
    html body .btn-danger:hover,
    html body .btn-warning:hover,
    html body .btn-info:hover,
    html body .btn-light:hover,
    html body .btn-dark:hover {
      background-color: var(--button-hover-bg-color) !important;
      color: var(--button-hover-text-color) !important;
      border-color: var(--button-hover-border-color) !important;
      border-style: var(--button-hover-border-style) !important;
      border-width: var(--button-hover-border-width) !important;
    }
    
    html body .btn:focus,
    html body button:focus,
    html body input[type="submit"]:focus,
    html body input[type="button"]:focus,
    html body .btn-primary:focus,
    html body .btn-secondary:focus {
      background-color: var(--button-hover-bg-color) !important;
      color: var(--button-hover-text-color) !important;
      border-color: var(--button-hover-border-color) !important;
      border-style: var(--button-hover-border-style) !important;
      border-width: var(--button-hover-border-width) !important;
      box-shadow: 0 0 0 0.2rem rgba(var(--button-hover-bg-color), 0.5) !important;
    }
    
    html body .btn:active,
    html body button:active,
    html body input[type="submit"]:active,
    html body input[type="button"]:active,
    html body .btn-primary:active,
    html body .btn-secondary:active {
      background-color: var(--button-hover-bg-color) !important;
      color: var(--button-hover-text-color) !important;
      border-color: var(--button-hover-border-color) !important;
      border-style: var(--button-hover-border-style) !important;
      border-width: var(--button-hover-border-width) !important;
    }
  </style>
</head>
<body>
  {% section 'header' %}

  <main role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  <!-- Bootstrap 5 JS -->
  {% comment %} theme-check-disable RemoteAsset {% endcomment %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
  {% comment %} theme-check-enable RemoteAsset {% endcomment %}
  <!-- Theme JS -->
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>

