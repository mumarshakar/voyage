<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-N4WZZ5BZ"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
  
  {% section 'header' %}

  <main role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  <!-- WhatsApp Floating Button -->
  {% if settings.whatsapp_enabled and settings.whatsapp_number != blank %}
    {%- liquid
      assign whatsapp_number = settings.whatsapp_number | replace: '+', '' | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', ''
      assign whatsapp_message = settings.whatsapp_message | default: ''
      assign whatsapp_button_size = settings.whatsapp_button_size | default: 60
      assign whatsapp_icon_size = settings.whatsapp_icon_size | default: 32
      assign whatsapp_bottom_spacing = settings.whatsapp_bottom_spacing | default: 30
      assign whatsapp_right_spacing = settings.whatsapp_right_spacing | default: 30
      
      if whatsapp_message != blank
        assign whatsapp_url = 'https://wa.me/' | append: whatsapp_number | append: '?text=' | append: whatsapp_message | url_encode
      else
        assign whatsapp_url = 'https://wa.me/' | append: whatsapp_number
      endif
    -%}
    
    <a href="{{ whatsapp_url }}" 
       target="_blank" 
       rel="noopener noreferrer"
       class="whatsapp-float"
       id="whatsapp-float-button"
       aria-label="Contact us on WhatsApp"
       style="position: fixed;
              bottom: {{ whatsapp_bottom_spacing }}px;
              right: {{ whatsapp_right_spacing }}px;
              width: {{ whatsapp_button_size }}px;
              height: {{ whatsapp_button_size }}px;
              background-color: #25D366;
              border-radius: 50%;
              display: flex;
              align-items: center;
              justify-content: center;
              box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
              z-index: 9999;
              transition: all 0.3s ease;
              text-decoration: none;
              cursor: pointer;">
      <svg width="{{ whatsapp_icon_size }}" height="{{ whatsapp_icon_size }}" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" fill="#FFFFFF"/>
      </svg>
    </a>
    
    <style>
      .whatsapp-float:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 16px rgba(37, 211, 102, 0.6) !important;
      }
      
      .whatsapp-float:active {
        transform: scale(0.95);
      }
      
      /* Mobile adjustments */
      @media (max-width: 768px) {
        .whatsapp-float {
          width: {{ whatsapp_button_size | minus: 5 }}px !important;
          height: {{ whatsapp_button_size | minus: 5 }}px !important;
          bottom: {{ whatsapp_bottom_spacing | minus: 5 }}px !important;
          right: {{ whatsapp_right_spacing | minus: 5 }}px !important;
        }
        
        .whatsapp-float svg {
          width: {{ whatsapp_icon_size | minus: 4 }}px !important;
          height: {{ whatsapp_icon_size | minus: 4 }}px !important;
        }
      }
      
      /* Tablet adjustments */
      @media (min-width: 769px) and (max-width: 1024px) {
        .whatsapp-float {
          width: {{ whatsapp_button_size | minus: 2 }}px !important;
          height: {{ whatsapp_button_size | minus: 2 }}px !important;
        }
      }
    </style>
  {% endif %}

  <!-- Shopify Common JS (must load before other scripts) -->
  <script src="{{ 'shopify_common.js' | asset_url }}" defer></script>
  <!-- Bootstrap 5 JS -->
  {% comment %} theme-check-disable RemoteAsset {% endcomment %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
  {% comment %} theme-check-enable RemoteAsset {% endcomment %}
  <!-- Theme JS -->
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
</body>
</html>

