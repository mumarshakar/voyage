{% comment %}
  Services Page Template
  This template will be available in the Shopify admin when creating/editing pages.
  Select "services" as the template when creating your page.
{% endcomment %}

<div class="services-page">
  {% section 'page-header' %}
  
  <section class="services-content-section" style="padding: 60px 20px 80px; background-color: #FFFFFF;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
          <div class="services-page-content" style="color: #333333; font-size: 16px; line-height: 1.8;">
            {{ page.content }}
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  .services-page-content {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .services-page-content h1,
  .services-page-content h2,
  .services-page-content h3,
  .services-page-content h4,
  .services-page-content h5,
  .services-page-content h6 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #333333;
  }
  
  .services-page-content p {
    margin-bottom: 1.5rem;
  }
  
  .services-page-content ul,
  .services-page-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .services-page-content li {
    margin-bottom: 0.5rem;
  }
  
  .services-page-content a {
    color: #8B6F47;
    text-decoration: underline;
  }
  
  .services-page-content a:hover {
    color: #FF6B35;
  }
</style>

