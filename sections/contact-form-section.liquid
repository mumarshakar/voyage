{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Form Title",
      "default": "Send Us a Message"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email Address"
    },
    {
      "type": "text",
      "id": "phone_label",
      "label": "Phone Label",
      "default": "Phone Number"
    },
    {
      "type": "text",
      "id": "message_label",
      "label": "Message Label",
      "default": "Message"
    },
    {
      "type": "text",
      "id": "submit_button",
      "label": "Submit Button Text",
      "default": "Send Message"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
      "info": "Instagram profile URL for the Follow Us card"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}

<section class="contact-section" style="padding: 80px 0;">
  <div class="container">
    <div class="row mb-5">
      <div class="col-md-6 col-lg-3 mb-4">
        <div class="contact-card">
          <i class="bi bi-telephone contact-icon"></i>
          <h4>Phone</h4>
          {% if settings.footer_phone != blank %}
            <p>{{ settings.footer_phone }}</p>
          {% else %}
            <p>{{shop.phone}}</p>
          {% endif %}
          <p class="text-muted">Mon - Fri: 9:00 AM - 6:00 PM</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-4">
        <div class="contact-card">
          <i class="bi bi-envelope contact-icon"></i>
          <h4>Email</h4>
          {% if settings.footer_email != blank %}
            <p>{{ settings.footer_email }}</p>
          {% else %}
            <p>{{shop.email}}</p>
          {% endif %}
          <p class="text-muted">We'll respond within 24 hours</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-4">
        <div class="contact-card">
          <i class="bi bi-geo-alt contact-icon"></i>
          <h4>Address</h4>
          <p>{{ shop.address.summary }}</p>
        </div>
      </div>
      <div class="col-md-6 col-lg-3 mb-4">
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="contact-card-link">
            <div class="contact-card">
              <i class="bi bi-instagram contact-icon"></i>
              <h4>Follow Us</h4>
              <p class="text-muted">Connect with us<br> on <br>Instagram</p>
            </div>
          </a>
        {% else %}
          <div class="contact-card">
            <i class="bi bi-instagram contact-icon"></i>
            <h4>Follow Us</h4>
            <p class="text-muted">Connect with us<br> on <br>Instagram<br></p>
          </div>
        {% endif %}
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="contact-form">
          <h2 class="mb-4 text-center">{{ section.settings.title }}</h2>
          {% form 'contact' %}
            {% if form.posted_successfully? %}
              <div class="alert alert-success" role="alert">
                Thank you for your message. We'll get back to you soon!
              </div>
            {% endif %}
            
            {% if form.errors %}
              <div class="alert alert-danger" role="alert">
                <ul class="mb-0">
                  {% for field in form.errors %}
                    <li>{{ field }} - {{ form.errors[field] }}</li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="ContactFormName" class="form-label">Name</label>
                <input type="text" class="form-control" id="ContactFormName" name="contact[name]" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="ContactFormEmail" class="form-label">{{ section.settings.email_label }}</label>
                <input type="email" class="form-control" id="ContactFormEmail" name="contact[email]" required>
              </div>
            </div>
            <div class="mb-3">
              <label for="ContactFormPhone" class="form-label">{{ section.settings.phone_label }}</label>
              <input type="tel" class="form-control" id="ContactFormPhone" name="contact[phone]">
            </div>
            <div class="mb-3">
              <label for="ContactFormMessage" class="form-label">{{ section.settings.message_label }}</label>
              <textarea class="form-control" id="ContactFormMessage" name="contact[body]" rows="5" required></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary btn-lg px-5">{{ section.settings.submit_button }}</button>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-card {
    background-color: var(--white);
    border-radius: 2px;
    padding: 3rem;
    margin-bottom: 2rem;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    text-align: center;
    transition: transform 0.3s;
  }
  
  .contact-card:hover {
    transform: translateY(-5px);
  }
  
  .contact-icon {
    font-size: 3rem;
    color: var(--primary-orange);
    margin-bottom: 1.5rem;
  }
  
  .contact-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  .contact-card-link:hover {
    text-decoration: none;
    color: inherit;
  }
  
  .contact-card-link .contact-card {
    cursor: pointer;
  }
</style>

