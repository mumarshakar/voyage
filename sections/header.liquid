{% render 'header-content', section: section %}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Voyage By HYPE"
    },
    {
      "type": "text",
      "id": "logo_line1",
      "label": "Logo Line 1",
      "default": "GLOW"
    },
    {
      "type": "text",
      "id": "logo_line2",
      "label": "Logo Line 2",
      "default": "DECK"
    },
    {
      "type": "checkbox",
      "id": "two_line_logo",
      "label": "Use Two-Line Logo",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_max_height",
      "label": "Logo Max Height (px)",
      "min": 30,
      "max": 150,
      "step": 5,
      "default": 60
    },
    {
      "type": "range",
      "id": "logo_font_size",
      "label": "Logo Text Font Size (px)",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 24
    },
    {
      "type": "color",
      "id": "logo_color",
      "label": "Logo Color",
      "default": "#8B6F47"
    },
    {
      "type": "header",
      "content": "Menu Settings"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "menu_alignment",
      "label": "Menu Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "range",
      "id": "menu_font_size",
      "label": "Menu Font Size (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "select",
      "id": "menu_font_weight",
      "label": "Menu Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    },
    {
      "type": "range",
      "id": "menu_link_spacing",
      "label": "Menu Link Spacing (px)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 8
    },
    {
      "type": "color",
      "id": "menu_link_color",
      "label": "Menu Link Color",
      "default": "#8B6F47"
    },
    {
      "type": "color",
      "id": "menu_link_hover_color",
      "label": "Menu Link Hover Color",
      "default": "#8B6F47"
    },
    {
      "type": "header",
      "content": "Book Now Button"
    },
    {
      "type": "checkbox",
      "id": "show_book_now_button",
      "label": "Show Book Now Button",
      "default": true
    },
    {
      "type": "text",
      "id": "book_now_button_text",
      "label": "Button Text",
      "default": "Book Now"
    },
    {
      "type": "url",
      "id": "book_now_button_url",
      "label": "Button URL",
      "info": "Link destination for the Book Now button"
    },
    {
      "type": "color",
      "id": "book_now_button_bg_color",
      "label": "Button Background Color",
      "default": "#FF6B35"
    },
    {
      "type": "color",
      "id": "book_now_button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "book_now_button_hover_bg_color",
      "label": "Button Hover Background Color",
      "default": "#FF8C61"
    },
    {
      "type": "color",
      "id": "book_now_button_hover_text_color",
      "label": "Button Hover Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "book_now_button_font_size",
      "label": "Button Font Size (px)",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 16
    },
    {
      "type": "select",
      "id": "book_now_button_font_weight",
      "label": "Button Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "book_now_button_padding_x",
      "label": "Button Horizontal Padding (px)",
      "min": 10,
      "max": 40,
      "step": 2,
      "default": 20
    },
    {
      "type": "range",
      "id": "book_now_button_padding_y",
      "label": "Button Vertical Padding (px)",
      "min": 6,
      "max": 20,
      "step": 1,
      "default": 10
    },
    {
      "type": "range",
      "id": "book_now_button_border_radius",
      "label": "Button Border Radius (px)",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 25
    },
    {
      "type": "range",
      "id": "book_now_button_margin_left",
      "label": "Button Left Margin (px)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 15
    },
    {
      "type": "header",
      "content": "Dropdown Menu Settings"
    },
    {
      "type": "color",
      "id": "dropdown_bg_color",
      "label": "Dropdown Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "dropdown_link_color",
      "label": "Dropdown Link Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "dropdown_hover_bg_color",
      "label": "Dropdown Hover Background Color",
      "default": "#FFF8E7"
    },
    {
      "type": "color",
      "id": "dropdown_hover_color",
      "label": "Dropdown Hover Color",
      "default": "#FF6B35"
    },
    {
      "type": "header",
      "content": "Header Appearance"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "header_shadow",
      "label": "Show Header Shadow",
      "default": true
    },
    {
      "type": "header",
      "content": "Scroll Behavior (Sticky/Fixed Headers)"
    },
    {
      "type": "paragraph",
      "content": "These settings apply when the header is sticky or fixed and the user scrolls down"
    },
    {
      "type": "color",
      "id": "scrolled_bg_color",
      "label": "Scrolled Background Color",
      "default": "#FFFFFF",
      "info": "Background color when scrolled (leave empty to use default background color)"
    },
    {
      "type": "range",
      "id": "scrolled_padding_top",
      "label": "Scrolled Top Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 12,
      "info": "Reduced padding when scrolled"
    },
    {
      "type": "range",
      "id": "scrolled_padding_bottom",
      "label": "Scrolled Bottom Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 12,
      "info": "Reduced padding when scrolled"
    },
    {
      "type": "checkbox",
      "id": "scrolled_shadow",
      "label": "Show Shadow When Scrolled",
      "default": true,
      "info": "Add shadow effect when user scrolls down"
    },
    {
      "type": "range",
      "id": "scroll_threshold",
      "label": "Scroll Threshold (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 50,
      "info": "How many pixels to scroll before header changes style"
    },
    {
      "type": "select",
      "id": "header_style",
      "label": "Header Position",
      "options": [
        {
          "value": "static",
          "label": "Static"
        },
        {
          "value": "sticky",
          "label": "Sticky"
        },
        {
          "value": "fixed",
          "label": "Fixed"
        },
        {
          "value": "absolute",
          "label": "Absolute"
        }
      ],
      "default": "fixed"
    },
    {
      "type": "select",
      "id": "fixed_position",
      "label": "Fixed Position Placement",
      "info": "When header is fixed, choose where to position it",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "top"
    },
    {
      "type": "range",
      "id": "position_top",
      "label": "Position from Top (px)",
      "info": "Offset from top edge (for fixed/absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "position_bottom",
      "label": "Position from Bottom (px)",
      "info": "Offset from bottom edge (for fixed/absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "position_left",
      "label": "Position from Left (px)",
      "info": "Offset from left edge (for absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "position_right",
      "label": "Position from Right (px)",
      "info": "Offset from right edge (for absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "header_z_index",
      "label": "Z-Index",
      "info": "Controls stacking order (higher values appear on top)",
      "min": 0,
      "max": 9999,
      "step": 10,
      "default": 1000,
      "unit": ""
    },
    {
      "type": "checkbox",
      "id": "make_header_transparent",
      "label": "Make Header Background Transparent",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "transparent_on_homepage",
      "label": "Transparent on Homepage Only",
      "default": false
    },
    {
      "type": "range",
      "id": "header_padding_top",
      "label": "Header Top Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "header_padding_bottom",
      "label": "Header Bottom Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "header_margin_top",
      "label": "Header Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "header_margin_bottom",
      "label": "Header Bottom Margin (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Header Icons"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show Cart Icon",
      "default": true
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size (px)",
      "min": 16,
      "max": 32,
      "step": 1,
      "default": 20
    },
    {
      "type": "header",
      "content": "Mobile Menu (Hamburger) Icon"
    },
    {
      "type": "checkbox",
      "id": "show_mobile_menu",
      "label": "Show Mobile Menu Icon",
      "default": true
    },
    {
      "type": "color",
      "id": "mobile_menu_icon_color",
      "label": "Hamburger Icon Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "mobile_menu_icon_size",
      "label": "Hamburger Icon Size (px)",
      "min": 16,
      "max": 48,
      "step": 2,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "mobile_menu_border_color",
      "label": "Hamburger Button Border Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "mobile_menu_border_width",
      "label": "Hamburger Button Border Width (px)",
      "min": 0,
      "max": 5,
      "step": 1,
      "default": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_menu_border_radius",
      "label": "Hamburger Button Border Radius (px)",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 4,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "mobile_menu_bg_transparent",
      "label": "Transparent Background",
      "default": true,
      "info": "Uncheck to use a custom background color"
    },
    {
      "type": "color",
      "id": "mobile_menu_bg_color",
      "label": "Hamburger Button Background Color",
      "default": "#FFFFFF",
      "info": "Only used if transparent background is disabled"
    },
    {
      "type": "range",
      "id": "mobile_menu_padding",
      "label": "Hamburger Button Padding (px)",
      "min": 4,
      "max": 20,
      "step": 1,
      "default": 8,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mobile_menu_stroke_width",
      "label": "Hamburger Icon Stroke Width",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2,
      "unit": ""
    }
  ]
}
{% endschema %}

