{% render 'header-content', section: section %}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Voyage By HYPE"
    },
    {
      "type": "text",
      "id": "logo_line1",
      "label": "Logo Line 1",
      "default": "GLOW"
    },
    {
      "type": "text",
      "id": "logo_line2",
      "label": "Logo Line 2",
      "default": "DECK"
    },
    {
      "type": "checkbox",
      "id": "two_line_logo",
      "label": "Use Two-Line Logo",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image",
      "info": "Default logo image (used as fallback)"
    },
    {
      "type": "header",
      "content": "Logo Images (Scroll-Based)"
    },
    {
      "type": "paragraph",
      "content": "Upload different logo images for before and after scroll. If not set, the default logo image will be used."
    },
    {
      "type": "image_picker",
      "id": "logo_image_before_scroll",
      "label": "Logo Image (Before Scroll)",
      "info": "Logo image shown when at top of page (not scrolled)"
    },
    {
      "type": "image_picker",
      "id": "logo_image_after_scroll",
      "label": "Logo Image (After Scroll)",
      "info": "Logo image shown when user has scrolled down"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_max_height",
      "label": "Logo Max Height (px)",
      "min": 30,
      "max": 150,
      "step": 5,
      "default": 60
    },
    {
      "type": "range",
      "id": "logo_font_size",
      "label": "Logo Text Font Size (px)",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 24
    },
    {
      "type": "color",
      "id": "logo_color",
      "label": "Logo Color",
      "default": "#000000",
      "info": "Default logo color (used as fallback)"
    },
    {
      "type": "header",
      "content": "Logo Colors (Scroll-Based)"
    },
    {
      "type": "paragraph",
      "content": "These colors apply to the logo text. Logo images are not affected."
    },
    {
      "type": "color",
      "id": "logo_color_before_scroll",
      "label": "Logo Color (Before Scroll)",
      "default": "#8B6F47",
      "info": "Logo color when at top of page (not scrolled)"
    },
    {
      "type": "color",
      "id": "logo_color_after_scroll",
      "label": "Logo Color (After Scroll)",
      "default": "#000000",
      "info": "Logo color when user has scrolled down"
    },
    {
      "type": "header",
      "content": "Book Now Button"
    },

    {
      "type": "text",
      "id": "book_now_button_text",
      "label": "Button Text",
      "default": "Book Now"
    },
    {
      "type": "url",
      "id": "book_now_button_url",
      "label": "Button URL",
      "info": "Link destination for the Book Now button"
    },
    {
      "type": "range",
      "id": "book_now_button_font_size",
      "label": "Button Font Size (px)",
      "min": 12,
      "max": 20,
      "step": 1,
      "default": 16
    },
    {
      "type": "select",
      "id": "book_now_button_font_weight",
      "label": "Button Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "range",
      "id": "book_now_button_padding_x",
      "label": "Button Horizontal Padding (px)",
      "min": 10,
      "max": 40,
      "step": 2,
      "default": 20
    },
    {
      "type": "range",
      "id": "book_now_button_padding_y",
      "label": "Button Vertical Padding (px)",
      "min": 6,
      "max": 20,
      "step": 1,
      "default": 10
    },
    {
      "type": "range",
      "id": "book_now_button_border_radius",
      "label": "Button Border Radius (px)",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 24
    },
    {
      "type": "range",
      "id": "book_now_button_margin_left",
      "label": "Button Left Margin (px)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 15
    },
    {
      "type": "header",
      "content": "Menu Settings"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "menu_alignment",
      "label": "Menu Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right",
      "info": "Menu styling (colors, fonts, dropdowns) is controlled by Theme Settings > Menus"
    },
    {
      "type": "header",
      "content": "Desktop Menu Colors (Scroll-Based)"
    },
    {
      "type": "paragraph",
      "content": "These colors apply to desktop menu only. Mobile menu colors are controlled separately."
    },
    {
      "type": "color",
      "id": "desktop_menu_color_before_scroll",
      "label": "Desktop Menu Color (Before Scroll)",
      "default": "#8B6F47",
      "info": "Menu link color when at top of page (not scrolled)"
    },
    {
      "type": "color",
      "id": "desktop_menu_color_after_scroll",
      "label": "Desktop Menu Color (After Scroll)",
      "default": "#333333",
      "info": "Menu link color when user has scrolled down"
    },
    {
      "type": "header",
      "content": "Header Appearance"
    },
    {
      "type": "checkbox",
      "id": "header_shadow",
      "label": "Show Header Shadow",
      "default": true
    },
    {
      "type": "header",
      "content": "Scroll Behavior (Sticky/Fixed Headers)"
    },
    {
      "type": "paragraph",
      "content": "These settings apply when the header is sticky or fixed and the user scrolls down"
    },
    {
      "type": "range",
      "id": "scrolled_padding_top",
      "label": "Scrolled Top Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 12,
      "info": "Reduced padding when scrolled"
    },
    {
      "type": "range",
      "id": "scrolled_padding_bottom",
      "label": "Scrolled Bottom Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 12,
      "info": "Reduced padding when scrolled"
    },
    {
      "type": "checkbox",
      "id": "scrolled_shadow",
      "label": "Show Shadow When Scrolled",
      "default": true,
      "info": "Add shadow effect when user scrolls down"
    },
    {
      "type": "range",
      "id": "scroll_threshold",
      "label": "Scroll Threshold (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 50,
      "info": "How many pixels to scroll before header changes style"
    },
    {
      "type": "select",
      "id": "header_style",
      "label": "Header Position",
      "options": [
        {
          "value": "static",
          "label": "Static"
        },
        {
          "value": "sticky",
          "label": "Sticky"
        },
        {
          "value": "fixed",
          "label": "Fixed"
        },
        {
          "value": "absolute",
          "label": "Absolute"
        }
      ],
      "default": "fixed"
    },
    {
      "type": "select",
      "id": "fixed_position",
      "label": "Fixed Position Placement",
      "info": "When header is fixed, choose where to position it",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "top"
    },
    {
      "type": "range",
      "id": "position_top",
      "label": "Position from Top (px)",
      "info": "Offset from top edge (for fixed/absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "position_bottom",
      "label": "Position from Bottom (px)",
      "info": "Offset from bottom edge (for fixed/absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "position_left",
      "label": "Position from Left (px)",
      "info": "Offset from left edge (for absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "position_right",
      "label": "Position from Right (px)",
      "info": "Offset from right edge (for absolute positioning)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "header_z_index",
      "label": "Z-Index",
      "info": "Controls stacking order (higher values appear on top)",
      "min": 0,
      "max": 5000,
      "step": 50,
      "default": 1000
    },
    {
      "type": "checkbox",
      "id": "make_header_transparent",
      "label": "Make Header Background Transparent",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "transparent_on_homepage",
      "label": "Transparent on Homepage Only",
      "default": false
    },
    {
      "type": "range",
      "id": "header_padding_top",
      "label": "Header Top Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "header_padding_bottom",
      "label": "Header Bottom Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "header_margin_top",
      "label": "Header Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "header_margin_bottom",
      "label": "Header Bottom Margin (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Mobile Menu (Hamburger) Icon"
    },
    {
      "type": "checkbox",
      "id": "show_mobile_menu",
      "label": "Show Mobile Menu Icon",
      "default": true
    },
    {
      "type": "range",
      "id": "mobile_menu_icon_size",
      "label": "Hamburger Icon Size (px)",
      "min": 16,
      "max": 48,
      "step": 2,
      "default": 24,
      "unit": "px",
      "info": "Size of the hamburger icon lines"
    },
    {
      "type": "color",
      "id": "mobile_menu_icon_color",
      "label": "Hamburger Icon Color",
      "default": "#333333",
      "info": "Color of the hamburger icon lines"
    },
    {
      "type": "range",
      "id": "mobile_menu_border_width",
      "label": "Hamburger Button Border Width (px)",
      "min": 0,
      "max": 5,
      "step": 1,
      "default": 1,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "mobile_menu_border_color",
      "label": "Hamburger Button Border Color",
      "default": "#333333",
      "info": "Color of the button border"
    },
    {
      "type": "range",
      "id": "mobile_menu_border_radius",
      "label": "Hamburger Button Border Radius (px)",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 4,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "mobile_menu_bg_transparent",
      "label": "Transparent Background",
      "default": true,
      "info": "Uncheck to use a custom background color"
    },
    {
      "type": "color",
      "id": "mobile_menu_bg_color",
      "label": "Hamburger Button Background Color",
      "default": "#FFFFFF",
      "info": "Background color when transparent is disabled"
    },
    {
      "type": "range",
      "id": "mobile_menu_padding",
      "label": "Hamburger Button Padding (px)",
      "min": 4,
      "max": 20,
      "step": 1,
      "default": 8,
      "unit": "px",
      "info": "Internal padding around the icon"
    },
    {
      "type": "range",
      "id": "mobile_menu_stroke_width",
      "label": "Hamburger Icon Line Thickness (px)",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 2,
      "unit": "px",
      "info": "Thickness of the hamburger icon lines"
    }
  ]
}
{% endschema %}

