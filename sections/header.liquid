{% render 'header-content' %}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "settings": [
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Voyage By HYPE"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width (px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_max_height",
      "label": "Logo Max Height (px)",
      "min": 30,
      "max": 150,
      "step": 5,
      "default": 60
    },
    {
      "type": "range",
      "id": "logo_font_size",
      "label": "Logo Text Font Size (px)",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 24
    },
    {
      "type": "color",
      "id": "logo_color",
      "label": "Logo Color",
      "default": "#FF6B35"
    },
    {
      "type": "header",
      "content": "Menu Settings"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Main Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "menu_alignment",
      "label": "Menu Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "range",
      "id": "menu_font_size",
      "label": "Menu Font Size (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16
    },
    {
      "type": "select",
      "id": "menu_font_weight",
      "label": "Menu Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "500"
    },
    {
      "type": "range",
      "id": "menu_link_spacing",
      "label": "Menu Link Spacing (px)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 8
    },
    {
      "type": "color",
      "id": "menu_link_color",
      "label": "Menu Link Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "menu_link_hover_color",
      "label": "Menu Link Hover Color",
      "default": "#FF6B35"
    },
    {
      "type": "header",
      "content": "Dropdown Menu Settings"
    },
    {
      "type": "color",
      "id": "dropdown_bg_color",
      "label": "Dropdown Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "dropdown_link_color",
      "label": "Dropdown Link Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "dropdown_hover_bg_color",
      "label": "Dropdown Hover Background Color",
      "default": "#FFF8E7"
    },
    {
      "type": "color",
      "id": "dropdown_hover_color",
      "label": "Dropdown Hover Color",
      "default": "#FF6B35"
    },
    {
      "type": "header",
      "content": "Header Appearance"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "checkbox",
      "id": "header_shadow",
      "label": "Show Header Shadow",
      "default": true
    },
    {
      "type": "select",
      "id": "header_style",
      "label": "Header Position",
      "options": [
        {
          "value": "static",
          "label": "Static"
        },
        {
          "value": "sticky",
          "label": "Sticky"
        },
        {
          "value": "fixed",
          "label": "Fixed"
        }
      ],
      "default": "fixed"
    },
    {
      "type": "checkbox",
      "id": "transparent_on_homepage",
      "label": "Transparent on Homepage",
      "default": false
    },
    {
      "type": "range",
      "id": "header_padding_top",
      "label": "Header Top Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "range",
      "id": "header_padding_bottom",
      "label": "Header Bottom Padding (px)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 16
    },
    {
      "type": "header",
      "content": "Header Icons"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show Search Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show Cart Icon",
      "default": true
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size (px)",
      "min": 16,
      "max": 32,
      "step": 1,
      "default": 20
    },
    {
      "type": "color",
      "id": "mobile_menu_icon_color",
      "label": "Mobile Menu Icon Color",
      "default": "#333333"
    }
  ]
}
{% endschema %}

