{% schema %}
{
  "name": "Features Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Class",
          "default": "bi-calendar-check",
          "info": "Use Bootstrap Icons class (e.g., bi-calendar-check)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Section",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "bi-calendar-check",
            "title": "Easy Booking",
            "description": "Book your journey in just a few clicks"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "bi-shield-check",
            "title": "Secure & Safe",
            "description": "Your data is protected"
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "bi-headset",
            "title": "24/7 Support",
            "description": "Always here to help you"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="feature-section">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4">
          <div class="card feature-card text-center">
            <i class="bi {{ block.settings.icon }} feature-icon"></i>
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

