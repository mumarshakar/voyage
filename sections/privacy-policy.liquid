{% schema %}
{
  "name": "Privacy Policy",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "header",
      "content": "Layout & Spacing"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "label": "Content Max Width (px)",
      "min": 600,
      "max": 1200,
      "step": 50,
      "default": 1000,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding (px)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Main Heading Font Size (px)",
      "min": 24,
      "max": 48,
      "step": 2,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_heading_font_size",
      "label": "Section Heading Font Size (px)",
      "min": 18,
      "max": 32,
      "step": 1,
      "default": 24,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "body_font_size",
      "label": "Body Text Font Size (px)",
      "min": 14,
      "max": 20,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "line_height",
      "label": "Line Height",
      "min": 1.4,
      "max": 2.0,
      "step": 0.1,
      "default": 1.7,
      "info": "Line height multiplier"
    },
    {
      "type": "range",
      "id": "section_spacing",
      "label": "Section Spacing (px)",
      "min": 20,
      "max": 60,
      "step": 5,
      "default": 40,
      "unit": "px",
      "info": "Space between sections"
    },
    {
      "type": "range",
      "id": "list_item_spacing",
      "label": "List Item Spacing (px)",
      "min": 8,
      "max": 24,
      "step": 2,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "section_heading_color",
      "label": "Section Heading Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color (for emphasis)",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Collapsible Sections"
    },
    {
      "type": "checkbox",
      "id": "enable_collapsible",
      "label": "Enable Collapsible Sections",
      "default": false,
      "info": "Allow users to expand/collapse sections for better navigation"
    },
    {
      "type": "select",
      "id": "default_state",
      "label": "Default State",
      "options": [
        {
          "value": "expanded",
          "label": "All Expanded"
        },
        {
          "value": "collapsed",
          "label": "All Collapsed"
        }
      ],
      "default": "expanded",
      "info": "Initial state of collapsible sections"
    }
  ],
  "presets": [
    {
      "name": "Privacy Policy"
    }
  ]
}
{% endschema %}

{%- liquid
  assign main_heading = section.settings.main_heading
  assign subheading = section.settings.subheading
  assign content_max_width = section.settings.content_max_width | default: 1000
  assign padding_top = section.settings.padding_top | default: 80
  assign padding_bottom = section.settings.padding_bottom | default: 80
  assign padding_horizontal = section.settings.padding_horizontal | default: 40
  assign heading_font_size = section.settings.heading_font_size | default: 36
  assign section_heading_font_size = section.settings.section_heading_font_size | default: 24
  assign body_font_size = section.settings.body_font_size | default: 16
  assign line_height = section.settings.line_height | default: 1.7
  assign section_spacing = section.settings.section_spacing | default: 40
  assign list_item_spacing = section.settings.list_item_spacing | default: 14
  assign background_color = section.settings.background_color | default: '#FFFFFF'
  assign text_color = section.settings.text_color | default: '#333333'
  assign heading_color = section.settings.heading_color | default: '#333333'
  assign section_heading_color = section.settings.section_heading_color | default: '#333333'
  assign accent_color = section.settings.accent_color | default: '#333333'
  assign enable_collapsible = section.settings.enable_collapsible | default: false
  assign default_state = section.settings.default_state | default: 'expanded'
  
  if default_state == 'expanded'
    assign toggle_icon = '−'
    assign display_style = 'block'
    assign aria_expanded = 'true'
  else
    assign toggle_icon = '+'
    assign display_style = 'none'
    assign aria_expanded = 'false'
  endif
-%}

<section class="privacy-policy-section" 
