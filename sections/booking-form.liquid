{% schema %}
{
  "name": "Booking Form",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Book Your Travel"
    },
    {
      "type": "select",
      "id": "variation",
      "label": "Form Style",
      "options": [
        {
          "value": "tabs",
          "label": "Style 1 - Tabs"
        },
        {
          "value": "selector",
          "label": "Style 2 - Service Selector"
        },
        {
          "value": "wizard",
          "label": "Style 3 - Multi-step Wizard"
        }
      ],
      "default": "tabs"
    }
  ],
  "presets": [
    {
      "name": "Booking Form"
    }
  ]
}
{% endschema %}

<section class="booking-section" style="margin-top: 76px; padding: 80px 0;">
  <div class="container">
    <div class="page-header text-center mb-5">
      <h1 class="page-title">{{ section.settings.title }}</h1>
    </div>
    
    {% if section.settings.variation == 'tabs' %}
      {% render 'booking-form-tabs' %}
    {% elsif section.settings.variation == 'selector' %}
      {% render 'booking-form-selector' %}
    {% else %}
      {% render 'booking-form-wizard' %}
    {% endif %}
  </div>
</section>

