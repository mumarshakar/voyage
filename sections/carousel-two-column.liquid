{% comment %}
  Carousel Two Column Section
  Displays a carousel with two columns per slide:
  - Left column: Image
  - Right column: Heading, Subheading, Description, Button
{% endcomment %}

{%- liquid
    assign section_id = 'carousel-two-column-' | append: section.id
    assign section_bg_color = section.settings.section_bg_color | default: '#ffffff'
    assign padding_top = section.settings.padding_top | default: 60
    assign padding_bottom = section.settings.padding_bottom | default: 60
    assign padding_horizontal = section.settings.padding_horizontal | default: 0
    assign padding_top_mobile = section.settings.padding_top_mobile | default: padding_top
    assign padding_bottom_mobile = section.settings.padding_bottom_mobile | default: padding_bottom
    assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile | default: padding_horizontal
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
    assign margin_top_mobile = section.settings.margin_top_mobile | default: margin_top
    assign margin_bottom_mobile = section.settings.margin_bottom_mobile | default: margin_bottom
    assign container_class = 'container'
    if section.settings.section_width_type == 'full_width'
      assign container_class = 'container-fluid'
    endif
    assign column_gap = section.settings.column_gap | default: 40
    assign autoplay = section.settings.autoplay
    assign autoplay_interval = section.settings.autoplay_interval | default: 5000
    assign show_indicators = section.settings.show_indicators
    assign show_arrows = section.settings.show_arrows
    assign hide_on_mobile = section.settings.hide_on_mobile
  -%}
  
  <style>
    #{{ section_id }} {
      background-color: {{ section_bg_color }};
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}px;
      padding-right: {{ padding_horizontal }}px;
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    #{{ section_id }} .container {
      max-width: 1920px;
      width: 100%;
    }
    
    .carousel-two-column-wrapper {
      display: flex;
      align-items: stretch;
      flex-wrap: nowrap;
      width: 100%;
      gap: {{ column_gap }}px;
      min-height: 400px;
    }
    
    .carousel-two-column-image-col {
      flex: 0 0 calc(50% - calc({{ column_gap }}px / 2));
      max-width: calc(50% - calc({{ column_gap }}px / 2));
      position: relative;
      display: flex;
      flex-direction: column;
      align-self: stretch;
      padding: 0;
    }
    
    .carousel-two-column-image-wrapper {
      width: 100%;
      flex: 1 1 auto;
      position: relative;
      overflow: hidden;
      border-radius: 2px;
      display: flex;
      align-items: stretch;
    }
    
    .carousel-two-column-image-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    
    .carousel-two-column-text-col {
      flex: 0 0 calc(50% - calc({{ column_gap }}px / 2));
      max-width: calc(50% - calc({{ column_gap }}px / 2));
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-self: stretch;
      padding: 40px;
    }
    
    .carousel-two-column-heading {
      margin-top: 0;
      margin-bottom: 1rem;
      font-weight: 600;
      line-height: 1.2;
    }
    
    .carousel-two-column-subheading {
      margin-top: 0;
      margin-bottom: 1rem;
      font-weight: 500;
      line-height: 1.3;
      opacity: 0.8;
    }
    
    .carousel-two-column-description {
      word-wrap: break-word;
      word-break: normal;
      overflow-wrap: break-word;
      white-space: normal;
      line-height: 1.6;
      margin-bottom: 1.5rem;
      width: 100%;
    }
    
    .carousel-two-column-button {
      display: inline-block;
      padding: 12px 30px;
      text-decoration: none;
      border-radius: 2px;
      font-weight: 600;
      transition: all 0.3s ease;
      border: none;
      text-align: center;
      width: 100%;
      max-width: 300px;
    }
    
    .carousel-two-column-button:hover {
      opacity: 0.9;
      transform: translateY(-2px);
    }
    
    /* Carousel Controls */
    .carousel-two-column-controls {
      position: relative;
    }
    
    .carousel-two-column-indicators {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-top: 30px;
      list-style: none;
      padding: 0;
    }
    
    .carousel-two-column-indicator {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background-color: #ccc;
      cursor: pointer;
      transition: all 0.3s ease;
      border: none;
      padding: 0;
    }
    
    .carousel-two-column-indicator.active {
      background-color: #333;
      width: 30px;
      border-radius: 6px;
    }
    
    .carousel-two-column-arrows {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid #ddd;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      z-index: 10;
    }
    
    .carousel-two-column-arrows:hover {
      background: rgba(255, 255, 255, 1);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .carousel-two-column-arrow-prev {
      left: -25px;
    }
    
    .carousel-two-column-arrow-next {
      right: -25px;
    }
    
    /* Responsive */
    @media (max-width: 767px) {
      .carousel-two-column-hide-mobile {
        display: none !important;
      }
      
      #{{ section_id }} {
        padding-top: {{ padding_top_mobile }}px;
        padding-bottom: {{ padding_bottom_mobile }}px;
        padding-left: {{ padding_horizontal_mobile }}px;
        padding-right: {{ padding_horizontal_mobile }}px;
        margin-top: {{ margin_top_mobile }}px;
        margin-bottom: {{ margin_bottom_mobile }}px;
      }
      
      .carousel-two-column-wrapper {
        flex-direction: column;
        gap: {{ section.settings.column_gap_mobile | default: 30 }}px;
      }
      
      .carousel-two-column-image-col,
      .carousel-two-column-text-col {
        flex: 0 0 100%;
        max-width: 100%;
      }
      
      .carousel-two-column-image-col {
        padding: 15px;
        border-radius: 4px;
      }
      
      .carousel-two-column-image-wrapper {
        border-radius: 2px;
        overflow: hidden;
      }
      
      .carousel-two-column-text-col {
        padding: 25px 20px;
        border-radius: 4px;
      }
      
      .carousel-two-column-arrows {
        width: 40px;
        height: 40px;
      }
      
      .carousel-two-column-arrow-prev {
        left: 10px;
      }
      
      .carousel-two-column-arrow-next {
        right: 10px;
      }
    }
    
    /* Content Styling (matching two-column-body) */
    .carousel-two-column-description {
      color: #333333 !important;
      font-size: 20px !important;
      font-weight: 400 !important;
      font-family: 'MerriweatherBody', 'Merriweather', Georgia, serif !important;
      line-height: 2.6 !important;
      letter-spacing: 0px !important;
      word-spacing: 0px !important;
      word-break: normal !important;
      overflow-wrap: break-word !important;
      white-space: normal !important;
      width: 100% !important;
    }
    
    .carousel-two-column-description p {
      margin-bottom: 1rem;
      color: #333333 !important;
      font-size: 20px !important;
      font-weight: 400 !important;
      font-family: 'MerriweatherBody', 'Merriweather', Georgia, serif !important;
      line-height: 2.6 !important;
      letter-spacing: 0px !important;
      word-spacing: 0px !important;
      word-break: normal !important;
      overflow-wrap: break-word !important;
      white-space: normal !important;
      width: 100% !important;
    }
    
    .carousel-two-column-description *:not(h1):not(h2):not(h3):not(h4):not(h5):not(h6) {
      color: #333333 !important;
      font-size: 20px !important;
      font-weight: 400 !important;
      font-family: 'MerriweatherBody', 'Merriweather', Georgia, serif !important;
      line-height: 2.6 !important;
      letter-spacing: 0px !important;
      word-spacing: 0px !important;
      word-break: normal !important;
      overflow-wrap: break-word !important;
      white-space: normal !important;
    }
    
    .carousel-two-column-description ul,
    .carousel-two-column-description ol {
      margin-bottom: 1rem;
      padding-left: 1.5rem;
      color: #333333 !important;
      font-size: 20px !important;
      font-weight: 400 !important;
      font-family: 'MerriweatherBody', 'Merriweather', Georgia, serif !important;
      line-height: 2.6 !important;
      letter-spacing: 0px !important;
      word-spacing: 0px !important;
    }
    
    .carousel-two-column-description li {
      margin-bottom: 0.5rem;
      color: #333333 !important;
      font-size: 20px !important;
      font-weight: 400 !important;
      font-family: 'MerriweatherBody', 'Merriweather', Georgia, serif !important;
      line-height: 2.6 !important;
      letter-spacing: 0px !important;
      word-spacing: 0px !important;
    }
  </style>
  
  <section id="{{ section_id }}" class="carousel-two-column-section {% if hide_on_mobile %}carousel-two-column-hide-mobile{% endif %}">
    <div class="{{ container_class }}">
      <div class="carousel-two-column-controls">
        {% if show_arrows %}
          <button class="carousel-two-column-arrows carousel-two-column-arrow-prev" 
                  onclick="carouselTwoColumnPrev('{{ section_id }}')"
                  aria-label="Previous slide">
            <i class="bi bi-chevron-left" style="font-size: 1.5rem;"></i>
          </button>
          <button class="carousel-two-column-arrows carousel-two-column-arrow-next" 
                  onclick="carouselTwoColumnNext('{{ section_id }}')"
                  aria-label="Next slide">
            <i class="bi bi-chevron-right" style="font-size: 1.5rem;"></i>
          </button>
        {% endif %}
        
        <div class="carousel-two-column-slides" id="carousel-slides-{{ section.id }}">
          {% for block in section.blocks %}
            {%- liquid
              assign slide_id = 'slide-' | append: block.id
              assign is_active = forloop.first
              assign image = block.settings.image
              assign image_alt = block.settings.image_alt | default: block.settings.heading
              assign heading = block.settings.heading
              assign subheading = block.settings.subheading
              assign description = block.settings.description
              assign button_text = block.settings.button_text
              assign button_link = block.settings.button_link
              assign heading_color = block.settings.heading_color | default: '#333333'
              # Typography now comes from theme settings
              assign heading_color_override = block.settings.heading_color_override | default: ''
              assign subheading_color_override = block.settings.subheading_color_override | default: ''
              assign text_color = block.settings.text_color | default: '#333333'
              assign button_bg_color = block.settings.button_bg_color | default: '#28a745'
              assign button_text_color = block.settings.button_text_color | default: '#ffffff'
              assign image_column_bg_color = block.settings.image_column_bg_color
              assign text_column_bg_color = block.settings.text_column_bg_color
              assign text_alignment = block.settings.text_alignment | default: 'left'
              assign vertical_alignment = block.settings.vertical_alignment | default: 'center'
            -%}
            
            <div class="carousel-two-column-slide {% if is_active %}active{% endif %}" 
                 id="{{ slide_id }}"
                 data-slide-index="{{ forloop.index0 }}"
                 style="display: {% if is_active %}flex{% else %}none{% endif %};">
              
              <div class="carousel-two-column-wrapper">
                {% comment %} Image Column {% endcomment %}
                <div class="carousel-two-column-image-col"
                     style="{% if image_column_bg_color != blank %}background-color: {{ image_column_bg_color }};{% endif %}">
                  {% if image != blank %}
                    <div class="carousel-two-column-image-wrapper">
                      <img 
                        src="{{ image | image_url: width: 1200 }}"
                        srcset="{{ image | image_url: width: 400 }} 400w,
                                {{ image | image_url: width: 800 }} 800w,
                                {{ image | image_url: width: 1200 }} 1200w,
                                {{ image | image_url: width: 1600 }} 1600w"
                        sizes="(max-width: 767px) 100vw, 50vw"
                        alt="{{ image_alt | escape }}"
                        width="{{ image.width }}"
                        height="{{ image.height }}"
                        class="carousel-two-column-image"
                        loading="{% if is_active %}eager{% else %}lazy{% endif %}">
                    </div>
                  {% else %}
                    <div class="carousel-two-column-image-wrapper"
                         style="background-color: #f0f0f0;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                color: #999;">
                      <p>Please upload an image</p>
                    </div>
                  {% endif %}
                </div>
                
                {% comment %} Text Column {% endcomment %}
                <div class="carousel-two-column-text-col"
                     style="text-align: {{ text_alignment }};
                            justify-content: {% case vertical_alignment %}{% when 'top' %}flex-start{% when 'center' %}center{% when 'bottom' %}flex-end{% endcase %};
                            {% if text_column_bg_color != blank %}background-color: {{ text_column_bg_color }};{% endif %}">
                  {% if heading != blank %}
                    <h2 class="carousel-two-column-heading"
                        style="{% if heading_color_override != blank %}color: {{ heading_color_override }};{% elsif heading_color != blank %}color: {{ heading_color }};{% endif %}
                               margin-bottom: 1rem;">
                      {{ heading }}
                    </h2>
                  {% endif %}
                  
                  {% if subheading != blank %}
                    <h3 class="carousel-two-column-subheading"
                        style="{% if subheading_color_override != blank %}color: {{ subheading_color_override }};{% elsif heading_color != blank %}color: {{ heading_color }};{% endif %}
                               margin-bottom: 1rem;
                               opacity: 0.8;">
                      {{ subheading }}
                    </h3>
                  {% endif %}
                  
                  {% if description != blank %}
                    <div class="carousel-two-column-description">
                      {{ description }}
                    </div>
                  {% endif %}
                  
                  {% if button_text != blank and button_link != blank %}
                    <div class="carousel-two-column-button-wrapper" style="margin-top: 1.5rem;">
                      <a href="{{ button_link }}" 
                         class="carousel-two-column-button"
                         style="background-color: {{ button_bg_color }};
                                color: {{ button_text_color }};
                                {% if text_alignment == 'center' %}margin: 0 auto;{% elsif text_alignment == 'right' %}margin-left: auto;{% endif %}">
                        {{ button_text }}
                      </a>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        
        {% if show_indicators and section.blocks.size > 1 %}
          <ul class="carousel-two-column-indicators" id="carousel-indicators-{{ section.id }}">
            {% for block in section.blocks %}
              <li>
                <button class="carousel-two-column-indicator {% if forloop.first %}active{% endif %}"
                        onclick="carouselTwoColumnGoTo('{{ section_id }}', {{ forloop.index0 }})"
                        aria-label="Go to slide {{ forloop.index }}"
                        data-slide-index="{{ forloop.index0 }}"></button>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </section>
  
  <script>
    (function() {
      const sectionId = '{{ section_id }}';
      let currentSlide = 0;
      const slides = document.querySelectorAll(`#carousel-slides-{{ section.id }} .carousel-two-column-slide`);
      const indicators = document.querySelectorAll(`#carousel-indicators-{{ section.id }} .carousel-two-column-indicator`);
      const totalSlides = slides.length;
      let autoplayInterval = null;
      
      {% if autoplay %}
        const autoplayDelay = {{ autoplay_interval }};
      {% else %}
        const autoplayDelay = null;
      {% endif %}
      
      function showSlide(index) {
        // Hide all slides
        slides.forEach((slide, i) => {
          if (i === index) {
            slide.classList.add('active');
            slide.style.display = 'flex';
          } else {
            slide.classList.remove('active');
            slide.style.display = 'none';
          }
        });
        
        // Update indicators
        indicators.forEach((indicator, i) => {
          if (i === index) {
            indicator.classList.add('active');
          } else {
            indicator.classList.remove('active');
          }
        });
        
        currentSlide = index;
      }
      
      function nextSlide() {
        const next = (currentSlide + 1) % totalSlides;
        showSlide(next);
      }
      
      function prevSlide() {
        const prev = (currentSlide - 1 + totalSlides) % totalSlides;
        showSlide(prev);
      }
      
      function goToSlide(index) {
        if (index >= 0 && index < totalSlides) {
          showSlide(index);
        }
      }
      
      function startAutoplay() {
        if (autoplayDelay && totalSlides > 1) {
          stopAutoplay();
          autoplayInterval = setInterval(nextSlide, autoplayDelay);
        }
      }
      
      function stopAutoplay() {
        if (autoplayInterval) {
          clearInterval(autoplayInterval);
          autoplayInterval = null;
        }
      }
      
      // Make functions globally available
      window['carouselTwoColumnNext_' + sectionId] = nextSlide;
      window['carouselTwoColumnPrev_' + sectionId] = prevSlide;
      window['carouselTwoColumnGoTo_' + sectionId] = goToSlide;
      
      // Start autoplay if enabled
      if (autoplayDelay) {
        startAutoplay();
        
        // Pause on hover
        const carouselElement = document.getElementById(sectionId);
        if (carouselElement) {
          carouselElement.addEventListener('mouseenter', stopAutoplay);
          carouselElement.addEventListener('mouseleave', startAutoplay);
        }
      }
    })();
    
    // Global functions for button clicks
    function carouselTwoColumnNext(sectionId) {
      const func = window['carouselTwoColumnNext_' + sectionId];
      if (func) func();
    }
    
    function carouselTwoColumnPrev(sectionId) {
      const func = window['carouselTwoColumnPrev_' + sectionId];
      if (func) func();
    }
    
    function carouselTwoColumnGoTo(sectionId, index) {
      const func = window['carouselTwoColumnGoTo_' + sectionId];
      if (func) func(index);
    }
  </script>
  
  {% schema %}
