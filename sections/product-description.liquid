{%- liquid
  assign show_tabs = section.settings.show_tabs | default: true
  assign show_description = section.settings.show_description | default: true
  assign show_additional_info = section.settings.show_additional_info | default: true
  
  assign section_bg_color = section.settings.section_bg_color | default: '#FFF8E7'
  assign padding_top = section.settings.padding_top | default: 60
  assign padding_bottom = section.settings.padding_bottom | default: 60
  
  assign tab_active_color = section.settings.tab_active_color | default: '#FF6B35'
  assign tab_inactive_color = section.settings.tab_inactive_color | default: '#666'
  assign tab_border_color = section.settings.tab_border_color | default: '#FF6B35'
  
  assign text_color = section.settings.text_color | default: '#333'
  assign content_padding = section.settings.content_padding | default: 30
-%}

<div class="product-description-section" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px; background-color: {{ section_bg_color }};">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
        {% if show_tabs %}
          <ul class="nav nav-tabs mb-4" id="product-tabs-{{ section.id }}" role="tablist" style="border-bottom: 2px solid {{ tab_border_color }};">
            {% if show_description %}
              <li class="nav-item" role="presentation">
                <button 
                  class="nav-link active" 
                  id="description-tab" 
                  data-bs-toggle="tab" 
                  data-bs-target="#description" 
                  type="button" 
                  role="tab"
                  style="color: {{ tab_inactive_color }}; border: none; border-bottom: 3px solid transparent; padding: 12px 24px; font-weight: 600;"
                  data-active-color="{{ tab_active_color }}"
                  data-inactive-color="{{ tab_inactive_color }}"
                  onmouseover="this.style.color='{{ tab_active_color }}'"
                  onmouseout="if(!this.classList.contains('active')) this.style.color='{{ tab_inactive_color }}'"
                  onclick="this.style.color='{{ tab_active_color }}'">
                  Description
                </button>
              </li>
            {% endif %}
            {% if show_additional_info %}
              <li class="nav-item" role="presentation">
                <button 
                  class="nav-link" 
                  id="additional-info-tab" 
                  data-bs-toggle="tab" 
                  data-bs-target="#additional-info" 
                  type="button" 
                  role="tab"
                  style="color: {{ tab_inactive_color }}; border: none; border-bottom: 3px solid transparent; padding: 12px 24px; font-weight: 600;"
                  data-active-color="{{ tab_active_color }}"
                  data-inactive-color="{{ tab_inactive_color }}"
                  onmouseover="this.style.color='{{ tab_active_color }}'"
                  onmouseout="if(!this.classList.contains('active')) this.style.color='{{ tab_inactive_color }}'"
                  onclick="this.style.color='{{ tab_active_color }}'">
                  Additional Information
                </button>
              </li>
            {% endif %}
          </ul>

          <div class="tab-content" id="product-tab-content">
            {% if show_description %}
              <div 
                class="tab-pane fade show active" 
                id="description" 
                role="tabpanel"
                style="padding: {{ content_padding }}px 0;">
                <div class="product-description-content" style="color: {{ text_color }};">
                  {{ product.description }}
                </div>
              </div>
            {% endif %}
            
            {% if show_additional_info %}
              <div 
                class="tab-pane fade" 
                id="additional-info" 
                role="tabpanel"
                style="padding: {{ content_padding }}px 0;">
                <div class="product-additional-info">
                  <table class="table table-borderless">
                    {% if product.vendor != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">Vendor:</td>
                        <td style="padding: 10px 0;">{{ product.vendor }}</td>
                      </tr>
                    {% endif %}
                    {% if product.type != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">Type:</td>
                        <td style="padding: 10px 0;">{{ product.type }}</td>
                      </tr>
                    {% endif %}
                    {% if product.selected_or_first_available_variant.sku != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">SKU:</td>
                        <td style="padding: 10px 0;">{{ product.selected_or_first_available_variant.sku }}</td>
                      </tr>
                    {% endif %}
                    {% if product.selected_or_first_available_variant.barcode != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">Barcode:</td>
                        <td style="padding: 10px 0;">{{ product.selected_or_first_available_variant.barcode }}</td>
                      </tr>
                    {% endif %}
                  </table>
                </div>
              </div>
            {% endif %}
          </div>
        {% else %}
          {% if show_description %}
            <div class="product-description-content" style="padding: {{ content_padding }}px 0; color: {{ text_color }};">
              {{ product.description }}
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  #product-tabs-{{ section.id }} .nav-link.active {
    color: {{ tab_active_color }} !important;
    border-bottom-color: {{ tab_active_color }} !important;
    background-color: transparent;
  }
  
  .product-description-content {
    line-height: 1.8;
  }
  
  .product-description-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 20px 0;
  }
  
  .product-description-content p {
    margin-bottom: 1.5rem;
  }
  
  .product-description-content h1,
  .product-description-content h2,
  .product-description-content h3,
  .product-description-content h4,
  .product-description-content h5,
  .product-description-content h6 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .product-description-content ul,
  .product-description-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .product-description-content li {
    margin-bottom: 0.5rem;
  }
</style>

{% schema %}
{
  "name": "Product Description",
  "settings": [
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "checkbox",
      "id": "show_tabs",
      "label": "Show Tabs",
      "default": true,
      "info": "Display content in tabbed format"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Description",
      "default": true,
      "info": "Display the product description"
    },
    {
      "type": "checkbox",
      "id": "show_additional_info",
      "label": "Show Additional Information",
      "default": true,
      "info": "Display vendor, type, SKU, and other product details"
    },
    {
      "type": "header",
      "content": "Section Styling"
    },
    {
      "type": "color",
      "id": "section_bg_color",
      "label": "Section Background Color",
      "default": "#FFF8E7",
      "info": "Background color for the entire section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Tab Styling"
    },
    {
      "type": "color",
      "id": "tab_active_color",
      "label": "Active Tab Color",
      "default": "#FF6B35",
      "info": "Color for the active/selected tab"
    },
    {
      "type": "color",
      "id": "tab_inactive_color",
      "label": "Inactive Tab Color",
      "default": "#666",
      "info": "Color for inactive tabs"
    },
    {
      "type": "color",
      "id": "tab_border_color",
      "label": "Tab Border Color",
      "default": "#FF6B35",
      "info": "Color for the tab border line"
    },
    {
      "type": "header",
      "content": "Content Styling"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333",
      "info": "Color for the description text"
    },
    {
      "type": "range",
      "id": "content_padding",
      "label": "Content Padding (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30,
      "unit": "px",
      "info": "Padding inside tab content areas"
    }
  ],
  "presets": [
    {
      "name": "Product Description"
    }
  ]
}
{% endschema %}

