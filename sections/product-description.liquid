{%- liquid
  assign show_tabs = section.settings.show_tabs | default: true
  assign show_description = section.settings.show_description | default: true
  assign show_additional_info = section.settings.show_additional_info | default: true
-%}

<div class="product-description-section" style="padding: 60px 0; background-color: var(--cream, #FFF8E7);">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
        {% if show_tabs %}
          <ul class="nav nav-tabs mb-4" id="product-tabs" role="tablist" style="border-bottom: 2px solid var(--primary-orange, #FF6B35);">
            {% if show_description %}
              <li class="nav-item" role="presentation">
                <button 
                  class="nav-link active" 
                  id="description-tab" 
                  data-bs-toggle="tab" 
                  data-bs-target="#description" 
                  type="button" 
                  role="tab"
                  style="color: #666; border: none; border-bottom: 3px solid transparent; padding: 12px 24px; font-weight: 600;"
                  onmouseover="this.style.color='var(--primary-orange, #FF6B35)'"
                  onmouseout="if(!this.classList.contains('active')) this.style.color='#666'"
                  onclick="this.style.color='var(--primary-orange, #FF6B35)'">
                  Description
                </button>
              </li>
            {% endif %}
            {% if show_additional_info %}
              <li class="nav-item" role="presentation">
                <button 
                  class="nav-link" 
                  id="additional-info-tab" 
                  data-bs-toggle="tab" 
                  data-bs-target="#additional-info" 
                  type="button" 
                  role="tab"
                  style="color: #666; border: none; border-bottom: 3px solid transparent; padding: 12px 24px; font-weight: 600;"
                  onmouseover="this.style.color='var(--primary-orange, #FF6B35)'"
                  onmouseout="if(!this.classList.contains('active')) this.style.color='#666'"
                  onclick="this.style.color='var(--primary-orange, #FF6B35)'">
                  Additional Information
                </button>
              </li>
            {% endif %}
          </ul>

          <div class="tab-content" id="product-tab-content">
            {% if show_description %}
              <div 
                class="tab-pane fade show active" 
                id="description" 
                role="tabpanel"
                style="padding: 30px 0;">
                <div class="product-description-content">
                  {{ product.description }}
                </div>
              </div>
            {% endif %}
            
            {% if show_additional_info %}
              <div 
                class="tab-pane fade" 
                id="additional-info" 
                role="tabpanel"
                style="padding: 30px 0;">
                <div class="product-additional-info">
                  <table class="table table-borderless">
                    {% if product.vendor != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">Vendor:</td>
                        <td style="padding: 10px 0;">{{ product.vendor }}</td>
                      </tr>
                    {% endif %}
                    {% if product.type != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">Type:</td>
                        <td style="padding: 10px 0;">{{ product.type }}</td>
                      </tr>
                    {% endif %}
                    {% if product.selected_or_first_available_variant.sku != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">SKU:</td>
                        <td style="padding: 10px 0;">{{ product.selected_or_first_available_variant.sku }}</td>
                      </tr>
                    {% endif %}
                    {% if product.selected_or_first_available_variant.barcode != blank %}
                      <tr>
                        <td style="width: 200px; font-weight: 600; padding: 10px 0;">Barcode:</td>
                        <td style="padding: 10px 0;">{{ product.selected_or_first_available_variant.barcode }}</td>
                      </tr>
                    {% endif %}
                  </table>
                </div>
              </div>
            {% endif %}
          </div>
        {% else %}
          {% if show_description %}
            <div class="product-description-content" style="padding: 30px 0;">
              {{ product.description }}
            </div>
          {% endif %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .nav-tabs .nav-link.active {
    color: var(--primary-orange, #FF6B35) !important;
    border-bottom-color: var(--primary-orange, #FF6B35) !important;
    background-color: transparent;
  }
  
  .product-description-content {
    line-height: 1.8;
    color: #333;
  }
  
  .product-description-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 20px 0;
  }
  
  .product-description-content p {
    margin-bottom: 1.5rem;
  }
  
  .product-description-content h1,
  .product-description-content h2,
  .product-description-content h3,
  .product-description-content h4,
  .product-description-content h5,
  .product-description-content h6 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .product-description-content ul,
  .product-description-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .product-description-content li {
    margin-bottom: 0.5rem;
  }
</style>

{% schema %}
{
  "name": "Product Description",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_tabs",
      "label": "Show Tabs",
      "default": true,
      "info": "Display content in tabbed format"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show Description",
      "default": true,
      "info": "Display the product description"
    },
    {
      "type": "checkbox",
      "id": "show_additional_info",
      "label": "Show Additional Information",
      "default": true,
      "info": "Display vendor, type, SKU, and other product details"
    }
  ],
  "presets": [
    {
      "name": "Product Description"
    }
  ]
}
{% endschema %}

