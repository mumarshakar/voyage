<script>
  (function() {
    const gallerySection = document.getElementById('gallery-{{ section.id }}');
    if (!gallerySection) return;

    const modal = document.getElementById('gallery-modal-{{ section.id }}');
    if (!modal) return;

    const modalOverlay = modal.querySelector('.modal-overlay');
    const modalClose = modal.querySelector('.modal-close');
    const gridItems = gallerySection.querySelectorAll('.grid-item-clickable[data-is-image="true"]');
    const modalGridItems = modal.querySelectorAll('.modal-grid-item');
    const modalMainImage = modal.querySelector('.modal-main-image');
    const modalCounter = modal.querySelector('.modal-counter');
    const currentImageSpan = modalCounter ? modalCounter.querySelector('.current-image') : null;
    const prevButton = modal.querySelector('.modal-nav-prev');
    const nextButton = modal.querySelector('.modal-nav-next');

    let currentImageIndex = 0;
    const totalImages = gridItems.length;
    const totalModalImages = modalGridItems.length;

    // Create mapping from block ID to modal index, and handle featured image
    const blockIdToModalMap = {};
    let featuredImageModalIndex = null;
    
    modalGridItems.forEach((item) => {
      const modalIndex = parseInt(item.dataset.modalIndex);
      const blockId = item.dataset.blockId;
      const isFeaturedImage = item.dataset.featuredImage === 'true';
      
      if (isFeaturedImage) {
        featuredImageModalIndex = modalIndex;
      } else if (blockId) {
        blockIdToModalMap[blockId] = modalIndex;
      }
    });

    // Update total images counter
    if (modalCounter) {
      const totalImagesSpan = modalCounter.querySelector('.total-images');
      if (totalImagesSpan) {
        totalImagesSpan.textContent = totalModalImages;
      }
    }

    if (totalImages === 0 || totalModalImages === 0) return;

    // Open modal when grid image is clicked (only images, not videos)
    gridItems.forEach((item) => {
      item.addEventListener('click', function(e) {
        e.preventDefault();
        const blockId = item.dataset.blockId;
        const isFeaturedImage = item.dataset.featuredImage === 'true';
        
        // Find the modal index for this block
        if (isFeaturedImage && featuredImageModalIndex !== null) {
          currentImageIndex = featuredImageModalIndex;
          openModal();
        } else if (blockId && blockIdToModalMap.hasOwnProperty(blockId)) {
          currentImageIndex = blockIdToModalMap[blockId];
          openModal();
        }
      });
    });

    // Close modal
    function closeModal() {
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }

    function openModal() {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
      updateModalImage();
    }

    // Update modal image and active thumbnail
    function updateModalImage() {
      if (currentImageIndex < 0) currentImageIndex = totalModalImages - 1;
      if (currentImageIndex >= totalModalImages) currentImageIndex = 0;

      const activeModalItem = modalGridItems[currentImageIndex];

      // Update main image
      if (activeModalItem && modalMainImage) {
        const imageSrc = activeModalItem.dataset.imageSrc;
        const imageAlt = activeModalItem.dataset.imageAlt || '';
        
        if (imageSrc) {
          modalMainImage.src = imageSrc;
          modalMainImage.alt = imageAlt;
        }
      }

      // Update active thumbnail
      modalGridItems.forEach((item, index) => {
        item.classList.remove('active');
      });

      if (activeModalItem) {
        activeModalItem.classList.add('active');
        
        // Scroll active thumbnail into view
        setTimeout(() => {
          activeModalItem.scrollIntoView({ 
            behavior: 'smooth', 
            block: 'nearest', 
            inline: 'center' 
          });
        }, 100);
      }

      // Update counter
      if (currentImageSpan) {
        currentImageSpan.textContent = currentImageIndex + 1;
      }
    }

    // Thumbnail click handler
    modalGridItems.forEach((item, index) => {
      item.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        currentImageIndex = index;
        updateModalImage();
      });
    });

    // Navigation buttons
    if (prevButton) {
      prevButton.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        currentImageIndex--;
        updateModalImage();
      });
    }

    if (nextButton) {
      nextButton.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        currentImageIndex++;
        updateModalImage();
      });
    }

    // Close modal handlers
    if (modalClose) {
      modalClose.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        closeModal();
      });
    }

    if (modalOverlay) {
      modalOverlay.addEventListener('click', function(e) {
        if (e.target === modalOverlay) {
          closeModal();
        }
      });
    }

    // Prevent modal content clicks from closing modal
    const modalContent = modal.querySelector('.modal-content');
    if (modalContent) {
      modalContent.addEventListener('click', function(e) {
        e.stopPropagation();
      });
    }

    // Keyboard navigation
    function handleKeyDown(e) {
      if (!modal.classList.contains('active')) return;

      if (e.key === 'Escape') {
        closeModal();
      } else if (e.key === 'ArrowLeft') {
        e.preventDefault();
        currentImageIndex--;
        updateModalImage();
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        currentImageIndex++;
        updateModalImage();
      }
    }

    document.addEventListener('keydown', handleKeyDown);

    // Initialize: Set first image when modal opens for first time
    if (modalGridItems.length > 0 && modalMainImage) {
      const firstItem = modalGridItems[0];
      if (firstItem.dataset.imageSrc) {
        modalMainImage.src = firstItem.dataset.imageSrc;
        modalMainImage.alt = firstItem.dataset.imageAlt || '';
      }
    }
  })();
</script>

