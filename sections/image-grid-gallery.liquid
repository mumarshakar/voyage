{%- liquid
  assign section_title = section.settings.title | default: ''
  assign section_subtitle = section.settings.subtitle | default: ''
  assign image_gap = section.settings.image_gap | default: 15
  assign section_bg_color = section.settings.section_bg_color | default: '#FFFFFF'
  assign section_padding_top = section.settings.section_padding_top | default: 80
  assign section_padding_bottom = section.settings.section_padding_bottom | default: 80
  assign section_padding_horizontal = section.settings.section_padding_horizontal | default: 20
  assign show_title = section.settings.show_title | default: true
  assign title_alignment = section.settings.title_alignment | default: 'center'
  
  assign featured_media_type = section.settings.featured_media_type | default: 'image'
  assign featured_image_desktop = section.settings.featured_image_desktop
  assign featured_image_mobile = section.settings.featured_image_mobile
  assign featured_video_desktop = section.settings.featured_video_desktop
  assign featured_video_desktop_url = section.settings.featured_video_desktop_url
  assign featured_video_mobile = section.settings.featured_video_mobile
  assign featured_video_mobile_url = section.settings.featured_video_mobile_url
  assign featured_media_alt_text = section.settings.featured_media_alt_text
  
  assign total_image_count = 0
  # Count featured image if exists
  if featured_image_desktop != blank or featured_image_mobile != blank
    assign total_image_count = total_image_count | plus: 1
  endif
  # Count image blocks
  for block in section.blocks
    if block.type == 'image'
      if block.settings.image != blank
        assign total_image_count = total_image_count | plus: 1
      endif
    endif
  endfor
-%}

<section class="image-grid-gallery-section" 
         id="gallery-{{ section.id }}"
         style="background-color: {{ section_bg_color }};
                padding-top: {{ section_padding_top }}px;
                padding-bottom: {{ section_padding_bottom }}px;
                padding-left: {{ section_padding_horizontal }}px;
                padding-right: {{ section_padding_horizontal }}px;">
  
  <div class="container">
    {% if show_title and section_title != blank %}
      <div class="gallery-header text-{{ title_alignment }}" style="margin-bottom: 3rem;">
        <h2 class="gallery-title">{{ section_title }}</h2>
        {% if section_subtitle != blank %}
          <p class="gallery-subtitle">{{ section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      {%- assign image_blocks = section.blocks | where: 'type', 'image' -%}
      
      <div class="gallery-layout" style="display: flex; flex-direction: column; gap: {{ image_gap }}px;">
        
        <!-- First Row: 80% Video/Image + 20% Two Stacked Images -->
        <div class="gallery-row-1" style="display: flex; gap: {{ image_gap }}px; min-height: 400px;">
          
          <!-- Left: 80% - Video or Image -->
          <div class="gallery-main-item" style="flex: 0 0 80%; position: relative;">
            {% if featured_media_type == 'video' %}
              <!-- Video -->
              <div class="gallery-video-wrapper" style="width: 100%; height: 100%; position: relative; border-radius: 8px; overflow: hidden; background-color: #000; aspect-ratio: 16 / 9;">
                {% comment %} Desktop Video {% endcomment %}
                {% if featured_video_desktop_url != blank %}
                  {% if featured_video_desktop_url contains 'youtube.com' or featured_video_desktop_url contains 'youtu.be' %}
                    {% assign video_id = featured_video_desktop_url | split: 'v=' | last | split: '&' | first %}
                    {% if video_id == blank %}
                      {% assign video_id = featured_video_desktop_url | split: '/' | last %}
                    {% endif %}
                    <div class="gallery-video-embed gallery-video-desktop">
                      <iframe src="https://www.youtube.com/embed/{{ video_id }}?autoplay=0&mute=0&loop=0&controls=1" 
                              frameborder="0" 
                              allow="autoplay; encrypted-media" 
                              allowfullscreen
                              style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; border-radius: 8px;">
                      </iframe>
                    </div>
                  {% elsif featured_video_desktop_url contains 'vimeo.com' %}
                    {% assign video_id = featured_video_desktop_url | split: '/' | last | split: '?' | first %}
                    <div class="gallery-video-embed gallery-video-desktop">
                      <iframe src="https://player.vimeo.com/video/{{ video_id }}?autoplay=0&muted=0&loop=0&controls=1" 
                              frameborder="0" 
                              allow="autoplay; encrypted-media" 
                              allowfullscreen
                              style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; border-radius: 8px;">
                      </iframe>
                    </div>
                  {% endif %}
                {% elsif featured_video_desktop != blank %}
                  <video class="gallery-video gallery-video-desktop" 
                         controls
                         playsinline
                         style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;">
                    {% for source in featured_video_desktop.sources %}
                      <source src="{{ source.url }}" type="{{ source.mime_type }}">
                    {% endfor %}
                  </video>
                {% endif %}
                
                {% comment %} Mobile Video {% endcomment %}
                {% if featured_video_mobile_url != blank %}
                  {% if featured_video_mobile_url contains 'youtube.com' or featured_video_mobile_url contains 'youtu.be' %}
                    {% assign video_id = featured_video_mobile_url | split: 'v=' | last | split: '&' | first %}
                    {% if video_id == blank %}
                      {% assign video_id = featured_video_mobile_url | split: '/' | last %}
                    {% endif %}
                    <div class="gallery-video-embed gallery-video-mobile">
                      <iframe src="https://www.youtube.com/embed/{{ video_id }}?autoplay=0&mute=0&loop=0&controls=1" 
                              frameborder="0" 
                              allow="autoplay; encrypted-media" 
                              allowfullscreen
                              style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; border-radius: 8px;">
                      </iframe>
                    </div>
                  {% elsif featured_video_mobile_url contains 'vimeo.com' %}
                    {% assign video_id = featured_video_mobile_url | split: '/' | last | split: '?' | first %}
                    <div class="gallery-video-embed gallery-video-mobile">
                      <iframe src="https://player.vimeo.com/video/{{ video_id }}?autoplay=0&muted=0&loop=0&controls=1" 
                              frameborder="0" 
                              allow="autoplay; encrypted-media" 
                              allowfullscreen
                              style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; border-radius: 8px;">
                      </iframe>
                    </div>
                  {% endif %}
                {% elsif featured_video_mobile != blank %}
                  <video class="gallery-video gallery-video-mobile" 
                         controls
                         playsinline
                         style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;">
                    {% for source in featured_video_mobile.sources %}
                      <source src="{{ source.url }}" type="{{ source.mime_type }}">
                    {% endfor %}
                  </video>
                {% elsif featured_video_desktop_url != blank or featured_video_desktop != blank %}
                  {% comment %} If no mobile video, use desktop video for mobile {% endcomment %}
                  {% if featured_video_desktop_url != blank %}
                    {% if featured_video_desktop_url contains 'youtube.com' or featured_video_desktop_url contains 'youtu.be' %}
                      {% assign video_id = featured_video_desktop_url | split: 'v=' | last | split: '&' | first %}
                      {% if video_id == blank %}
                        {% assign video_id = featured_video_desktop_url | split: '/' | last %}
                      {% endif %}
                      <div class="gallery-video-embed gallery-video-mobile">
                        <iframe src="https://www.youtube.com/embed/{{ video_id }}?autoplay=0&mute=0&loop=0&controls=1" 
                                frameborder="0" 
                                allow="autoplay; encrypted-media" 
                                allowfullscreen
                                style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; border-radius: 8px;">
                        </iframe>
                      </div>
                    {% elsif featured_video_desktop_url contains 'vimeo.com' %}
                      {% assign video_id = featured_video_desktop_url | split: '/' | last | split: '?' | first %}
                      <div class="gallery-video-embed gallery-video-mobile">
                        <iframe src="https://player.vimeo.com/video/{{ video_id }}?autoplay=0&muted=0&loop=0&controls=1" 
                                frameborder="0" 
                                allow="autoplay; encrypted-media" 
                                allowfullscreen
                                style="width: 100%; height: 100%; position: absolute; top: 0; left: 0; border-radius: 8px;">
                        </iframe>
                      </div>
                    {% endif %}
                  {% elsif featured_video_desktop != blank %}
                    <video class="gallery-video gallery-video-mobile" 
                           controls
                           playsinline
                           style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;">
                      {% for source in featured_video_desktop.sources %}
                        <source src="{{ source.url }}" type="{{ source.mime_type }}">
                      {% endfor %}
                    </video>
                  {% endif %}
                {% endif %}
              </div>
            {% elsif featured_image_desktop != blank or featured_image_mobile != blank %}
              <!-- Image Mode -->
              <div class="grid-item grid-item-clickable" 
                   data-is-image="true"
                   data-featured-image="true"
                   style="width: 100%; height: 100%; cursor: pointer;">
                <div class="grid-image-wrapper" 
                     style="position: relative;
                            overflow: hidden;
                            border-radius: 8px;
                            width: 100%;
                            height: 100%;
                            aspect-ratio: 16 / 9;">
                  {% if featured_image_desktop != blank %}
                    <img src="{{ featured_image_desktop | image_url: width: 1920 }}" 
                         alt="{{ featured_media_alt_text | default: featured_image_desktop.alt | escape }}"
                         class="grid-image gallery-image-desktop"
                         loading="lazy"
                         data-src="{{ featured_image_desktop | image_url: width: 1920 }}"
                         style="width: 100%; height: 100%; object-fit: cover;">
                  {% endif %}
                  {% if featured_image_mobile != blank %}
                    <img src="{{ featured_image_mobile | image_url: width: 800 }}" 
                         alt="{{ featured_media_alt_text | default: featured_image_mobile.alt | escape }}"
                         class="grid-image gallery-image-mobile"
                         loading="lazy"
                         data-src="{{ featured_image_mobile | image_url: width: 1920 }}"
                         style="width: 100%; height: 100%; object-fit: cover;">
                  {% elsif featured_image_desktop != blank %}
                    {% comment %} If no mobile image, use desktop image for mobile {% endcomment %}
                    <img src="{{ featured_image_desktop | image_url: width: 1920 }}" 
                         alt="{{ featured_media_alt_text | default: featured_image_desktop.alt | escape }}"
                         class="grid-image gallery-image-mobile"
                         loading="lazy"
                         data-src="{{ featured_image_desktop | image_url: width: 1920 }}"
                         style="width: 100%; height: 100%; object-fit: cover;">
                  {% endif %}
                  <div class="grid-image-overlay">
                    <i class="bi bi-zoom-in" style="font-size: 2rem; color: white;"></i>
                  </div>
                </div>
              </div>
            {% endif %}
          </div>

          <!-- Right: 20% - Two Stacked Images -->
          <div class="gallery-side-column" style="flex: 0 0 20%; display: flex; flex-direction: column; gap: {{ image_gap }}px;">
            {% assign image_count = 0 %}
            {% for block in section.blocks %}
              {% if block.type == 'image' and block.settings.image != blank %}
                {% if image_count == 0 %}
                  <div class="grid-item grid-item-clickable" 
                       data-block-id="{{ block.id }}"
                       data-is-image="true"
                       {{ block.shopify_attributes }}
                       style="flex: 1; cursor: pointer;">
                    <div class="grid-image-wrapper" 
                         style="position: relative;
                                overflow: hidden;
                                border-radius: 8px;
                                width: 100%;
                                height: 100%;
                                min-height: 190px;">
                      <img src="{{ block.settings.image | image_url: width: 800 }}" 
                           alt="{{ block.settings.alt_text | default: block.settings.image.alt | escape }}"
                           class="grid-image"
                           loading="lazy"
                           data-src="{{ block.settings.image | image_url: width: 1920 }}"
                           style="width: 100%; height: 100%; object-fit: cover; display: block;">
                      <div class="grid-image-overlay">
                        <i class="bi bi-zoom-in" style="font-size: 1.5rem; color: white;"></i>
                      </div>
                    </div>
                  </div>
                {% elsif image_count == 1 %}
                  <div class="grid-item grid-item-clickable" 
                       data-block-id="{{ block.id }}"
                       data-is-image="true"
                       {{ block.shopify_attributes }}
                       style="flex: 1; cursor: pointer;">
                    <div class="grid-image-wrapper" 
                         style="position: relative;
                                overflow: hidden;
                                border-radius: 8px;
                                width: 100%;
                                height: 100%;
                                min-height: 190px;">
                      <img src="{{ block.settings.image | image_url: width: 800 }}" 
                           alt="{{ block.settings.alt_text | default: block.settings.image.alt | escape }}"
                           class="grid-image"
                           loading="lazy"
                           data-src="{{ block.settings.image | image_url: width: 1920 }}"
                           style="width: 100%; height: 100%; object-fit: cover; display: block;">
                      <div class="grid-image-overlay">
                        <i class="bi bi-zoom-in" style="font-size: 1.5rem; color: white;"></i>
                      </div>
                    </div>
                  </div>
                  {% break %}
                {% endif %}
                {% assign image_count = image_count | plus: 1 %}
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <!-- Second Row: 4 Images -->
        <div class="gallery-row-2" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: {{ image_gap }}px;">
          {% assign image_count = 0 %}
          {% assign row2_count = 0 %}
          {% for block in section.blocks %}
            {% if block.type == 'image' and block.settings.image != blank %}
              {% assign image_count = image_count | plus: 1 %}
              {% if image_count > 2 and row2_count < 4 %}
                <div class="grid-item grid-item-clickable" 
                     data-block-id="{{ block.id }}"
                     data-is-image="true"
                     {{ block.shopify_attributes }}
                     style="cursor: pointer;">
                  <div class="grid-image-wrapper" 
                       style="position: relative;
                              overflow: hidden;
                              border-radius: 8px;
                              width: 100%;
                              aspect-ratio: 1 / 1;">
                    <img src="{{ block.settings.image | image_url: width: 800 }}" 
                         alt="{{ block.settings.alt_text | default: block.settings.image.alt | escape }}"
                         class="grid-image"
                         loading="lazy"
                         data-src="{{ block.settings.image | image_url: width: 1920 }}"
                         style="width: 100%; height: 100%; object-fit: cover; display: block;">
                    <div class="grid-image-overlay">
                      <i class="bi bi-zoom-in" style="font-size: 1.5rem; color: white;"></i>
                    </div>
                  </div>
                </div>
                {% assign row2_count = row2_count | plus: 1 %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="gallery-empty-state text-center" style="padding: 4rem 0;">
        <p>No images added yet. Add images in the theme customizer.</p>
      </div>
    {% endif %}
  </div>
</section>

<!-- Modal -->
<div class="gallery-modal" id="gallery-modal-{{ section.id }}">
  <div class="modal-overlay"></div>
  <div class="modal-content">
    <button class="modal-close" aria-label="Close modal">
      <i class="bi bi-x-lg"></i>
    </button>
    
    <div class="modal-grid-container">
      <div class="modal-grid" id="modal-grid-{{ section.id }}">
        {% comment %} Only include images in modal, skip videos {% endcomment %}
        {% assign image_index = 0 %}
        {% comment %} Add featured image if it exists {% endcomment %}
        {% if featured_image_desktop != blank or featured_image_mobile != blank %}
          {% assign featured_image = featured_image_desktop | default: featured_image_mobile %}
          <div class="modal-grid-item" 
               data-modal-index="{{ image_index }}"
               data-featured-image="true"
               data-image-src="{{ featured_image | image_url: width: 1920 }}"
               data-image-alt="{{ featured_media_alt_text | default: featured_image.alt | escape }}">
            <img src="{{ featured_image | image_url: width: 300 }}" 
                 alt="{{ featured_media_alt_text | default: featured_image.alt | escape }}"
                 class="modal-thumbnail"
                 loading="lazy">
            <div class="modal-thumbnail-overlay"></div>
          </div>
          {% assign image_index = image_index | plus: 1 %}
        {% endif %}
        {% comment %} Add image blocks {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            {% if block.settings.image != blank %}
              <div class="modal-grid-item" 
                   data-modal-index="{{ image_index }}"
                   data-block-id="{{ block.id }}"
                   data-image-src="{{ block.settings.image | image_url: width: 1920 }}"
                   data-image-alt="{{ block.settings.alt_text | default: block.settings.image.alt | escape }}">
                <img src="{{ block.settings.image | image_url: width: 300 }}" 
                     alt="{{ block.settings.alt_text | default: block.settings.image.alt | escape }}"
                     class="modal-thumbnail"
                     loading="lazy">
                <div class="modal-thumbnail-overlay"></div>
              </div>
              {% assign image_index = image_index | plus: 1 %}
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="modal-main-image-container">
      <button class="modal-nav modal-nav-prev" aria-label="Previous image">
        <i class="bi bi-chevron-left"></i>
      </button>
      <div class="modal-main-image-wrapper">
        <img src="" alt="" class="modal-main-image">
      </div>
      <button class="modal-nav modal-nav-next" aria-label="Next image">
        <i class="bi bi-chevron-right"></i>
      </button>
    </div>

    <div class="modal-footer">
      <span class="modal-counter">
        <span class="current-image">1</span> / <span class="total-images">{{ total_image_count }}</span>
      </span>
    </div>
  </div>
</div>

<style>
  .image-grid-gallery-section {
    position: relative;
  }

  .gallery-header {
    margin-bottom: 3rem;
  }

  .gallery-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #333;
  }

