<div class="container py-5">
  <div class="row">
    <div class="col-12 text-center mb-5">
      <h1 class="display-4">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="rte lead">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </div>

  {% paginate collection.products by section.settings.products_per_page %}
    {% if collection.products.size > 0 %}
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-{{ section.settings.products_per_row }} g-4">
        {% for product in collection.products %}
          <div class="col">
            <div class="card h-100 {% if section.settings.card_shadow %}shadow-sm{% endif %}">
              <a href="{{ product.url | within: collection }}" class="text-decoration-none text-dark">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | img_url: 'large' }}"
                       class="card-img-top"
                       alt="{{ product.featured_image.alt | escape }}">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
                {% endif %}
                <div class="card-body">
                  <h5 class="card-title">
                    {{ product.title }}
                  </h5>
                  <p class="card-text">
                    {{ product.price | money }}
                  </p>
                  {% if product.vendor != blank %}
                    <p class="card-text text-muted">
                      {{ product.vendor }}
                    </p>
                  {% endif %}
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <nav class="mt-5">
          <ul class="pagination justify-content-center">
            {% if paginate.previous %}
              <li class="page-item">
                <a class="page-link" href="{{ paginate.previous.url }}" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            {% else %}
              <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
              </li>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <li class="page-item">
                  <a class="page-link" href="{{ part.url }}">{{ part.title }}</a>
                </li>
              {% else %}
                {% if part.title == '&hellip;' %}
                  <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                {% else %}
                  <li class="page-item active" aria-current="page">
                    <span class="page-link">{{ part.title }}</span>
                  </li>
                {% endif %}
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <li class="page-item">
                <a class="page-link" href="{{ paginate.next.url }}" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            {% else %}
              <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
              </li>
            {% endif %}
          </ul>
        </nav>
      {% endif %}
    {% else %}
      <div class="text-center">
        <p>No products found in this collection.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">Continue shopping</a>
      </div>
    {% endif %}
  {% endpaginate %}
</div>

<style>
  :root {
    --card-bg-color: {{ section.settings.card_bg_color }};
    --card-border-radius: {{ section.settings.card_border_radius }}px;
    --image-border-radius: {{ section.settings.image_border_radius }}px;
    --title-font-size: {{ section.settings.title_font_size }}px;
    --title-font-weight: {{ section.settings.title_font_weight }};
    --title-color: {{ section.settings.title_color }};
    --price-font-size: {{ section.settings.price_font_size }}px;
    --price-font-weight: {{ section.settings.price_font_weight }};
    --price-color: {{ section.settings.price_color }};
    --vendor-font-size: {{ section.settings.vendor_font_size }}px;
    --vendor-font-weight: {{ section.settings.vendor_font_weight }};
    --vendor-color: {{ section.settings.vendor_color }};
  }
</style>

{% schema %}
  {
    "name": "Main Collection",
    "settings": [
      {
        "type": "header",
        "content": "Product Card Settings"
      },
      {
        "type": "range",
        "id": "products_per_page",
        "label": "Products per page",
        "min": 2,
        "max": 24,
        "step": 1,
        "default": 12
      },
      {
        "type": "range",
        "id": "products_per_row",
        "label": "Products per row (Desktop)",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "type": "select",
        "id": "card_bg_color",
        "label": "Card Background Color",
        "options": [
          { "value": "white", "label": "White" },
          { "value": "#f8f9fa", "label": "Light Gray" },
          { "value": "#e9ecef", "label": "Gray" }
        ],
        "default": "white"
      },
      {
        "type": "range",
        "id": "card_border_radius",
        "label": "Card Border Radius (px)",
        "min": 0,
        "max": 30,
        "step": 1,
        "default": 8
      },
      {
        "type": "checkbox",
        "id": "card_shadow",
        "label": "Show Card Shadow",
        "default": true
      },
      {
        "type": "header",
        "content": "Image Settings"
      },
      {
        "type": "range",
        "id": "image_border_radius",
        "label": "Image Border Radius (px)",
        "min": 0,
        "max": 30,
        "step": 1,
        "default": 4
      },
      {
        "type": "header",
        "content": "Title Settings"
      },
      {
        "type": "range",
        "id": "title_font_size",
        "label": "Title Font Size (px)",
        "min": 14,
        "max": 30,
        "step": 1,
        "default": 18
      },
      {
        "type": "select",
        "id": "title_font_weight",
        "label": "Title Font Weight",
        "options": [
          { "value": "400", "label": "Normal" },
          { "value": "500", "label": "Medium" },
          { "value": "600", "label": "Semi Bold" },
          { "value": "700", "label": "Bold" }
        ],
        "default": "600"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#212529"
      },
      {
        "type": "header",
        "content": "Price Settings"
      },
      {
        "type": "range",
        "id": "price_font_size",
        "label": "Price Font Size (px)",
        "min": 12,
        "max": 24,
        "step": 1,
        "default": 16
      },
      {
        "type": "select",
        "id": "price_font_weight",
        "label": "Price Font Weight",
        "options": [
          { "value": "400", "label": "Normal" },
          { "value": "500", "label": "Medium" },
          { "value": "600", "label": "Semi Bold" },
          { "value": "700", "label": "Bold" }
        ],
        "default": "500"
      },
      {
        "type": "color",
        "id": "price_color",
        "label": "Price Color",
        "default": "#000000"
      },
      {
        "type": "header",
        "content": "Brand/Vendor Settings"
      },
      {
        "type": "range",
        "id": "vendor_font_size",
        "label": "Brand/Vendor Font Size (px)",
        "min": 10,
        "max": 20,
        "step": 1,
        "default": 14
      },
      {
        "type": "select",
        "id": "vendor_font_weight",
        "label": "Brand/Vendor Font Weight",
        "options": [
          { "value": "300", "label": "Light" },
          { "value": "400", "label": "Normal" },
          { "value": "500", "label": "Medium" }
        ],
        "default": "400"
      },
      {
        "type": "color",
        "id": "vendor_color",
        "label": "Brand/Vendor Color",
        "default": "#6c757d"
      }
    ],
    "presets": [
      {
        "name": "Main Collection"
      }
    ]
  }
{% endschema %}
