<div class="container py-5 main-collection">
  <div class="row">
    <div class="col-12 text-center mb-5">
      <h1 class="display-4">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="rte lead">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </div>

  {% paginate collection.products by section.settings.products_per_page %}
    {% if collection.products.size > 0 %}
      {% assign product_count = collection.products.size %}
      {% if section.settings.columns_mobile %}
        {% assign columns_mobile = section.settings.columns_mobile %}
      {% else %}
        {% assign columns_mobile = 1 %}
      {% endif %}
      {% if section.settings.columns_tablet %}
        {% assign columns_tablet = section.settings.columns_tablet %}
      {% else %}
        {% assign columns_tablet = 2 %}
      {% endif %}
      {% if section.settings.columns_desktop %}
        {% assign columns_desktop = section.settings.columns_desktop %}
      {% else %}
        {% assign columns_desktop = 4 %}
      {% endif %}
      {% if section.settings.alignment %}
        {% assign alignment = section.settings.alignment %}
      {% else %}
        {% assign alignment = 'flex-start' %}
      {% endif %}
      <div class="row row-cols-{{ columns_mobile }} row-cols-md-{{ columns_tablet }} row-cols-lg-{{ columns_desktop }} g-4 alignment-{{ alignment }}{% if product_count == 1 %} single-card{% endif %}">
        {% for product in collection.products %}
          <div class="col">
            <div class="card h-100 {% if section.settings.card_shadow %}shadow-sm{% endif %}">
              <a href="{{ product.url | within: collection }}" class="text-decoration-none text-dark d-flex flex-column h-100">
                {% if product.featured_image %}
                  <img src="{{ product.featured_image | image_url: width: 800 }}"
                       class="card-img-top"
                       alt="{{ product.featured_image.alt | escape }}"
                       width="{{ product.featured_image.width }}"
                       height="{{ product.featured_image.height }}"
                       loading="lazy">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'card-img-top' }}
                {% endif %}
                <div class="card-body">
                  <h5 class="card-title card-title-grow">
                    {{ product.title }}
                  </h5>
                  <p class="card-text">
                    {{ product.price | money }}
                  </p>
                  {% if product.vendor != blank %}
                    <p class="card-text text-muted">
                      {{ product.vendor }}
                    </p>
                  {% endif %}
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <nav class="mt-5">
          <ul class="pagination justify-content-center">
            {% if paginate.previous %}
              <li class="page-item">
                <a class="page-link" href="{{ paginate.previous.url }}" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
            {% else %}
              <li class="page-item disabled">
                <span class="page-link">&laquo;</span>
              </li>
            {% endif %}

            {% for part in paginate.parts %}
              {% if part.is_link %}
                <li class="page-item">
                  <a class="page-link" href="{{ part.url }}">{{ part.title }}</a>
                </li>
              {% else %}
                {% if part.title == '&hellip;' %}
                  <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                {% else %}
                  <li class="page-item active" aria-current="page">
                    <span class="page-link">{{ part.title }}</span>
                  </li>
                {% endif %}
              {% endif %}
            {% endfor %}

            {% if paginate.next %}
              <li class="page-item">
                <a class="page-link" href="{{ paginate.next.url }}" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            {% else %}
              <li class="page-item disabled">
                <span class="page-link">&raquo;</span>
              </li>
            {% endif %}
          </ul>
        </nav>
      {% endif %}
    {% else %}
      <div class="text-center">
        <p>No products found in this collection.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">Continue shopping</a>
      </div>
    {% endif %}
  {% endpaginate %}
</div>

<style>
  .main-collection {
    --card-bg-color: {{ section.settings.card_bg_color | default: 'white' }};
    --card-border-radius: {{ section.settings.card_border_radius | default: 8 }}px;
    --image-border-radius: {{ section.settings.image_border_radius | default: 4 }}px;
    --title-font-size: {{ section.settings.title_font_size | default: 18 }}px;
    --title-font-weight: {{ section.settings.title_font_weight | default: '600' }};
    --title-color: {{ section.settings.title_color | default: '#212529' }};
    --price-font-size: {{ section.settings.price_font_size | default: 16 }}px;
    --price-font-weight: {{ section.settings.price_font_weight | default: '500' }};
    --price-color: {{ section.settings.price_color | default: '#000000' }};
    --vendor-font-size: {{ section.settings.vendor_font_size | default: 14 }}px;
    --vendor-font-weight: {{ section.settings.vendor_font_weight | default: '400' }};
    --vendor-color: {{ section.settings.vendor_color | default: '#6c757d' }};
  }
  
  /* Apply card styles */
  .main-collection .card {
    background-color: var(--card-bg-color) !important;
    border-radius: var(--card-border-radius) !important;
    overflow: hidden;
  }
  
  /* Apply image styles */
  .main-collection .card-img-top {
    border-top-left-radius: var(--image-border-radius) !important;
    border-top-right-radius: var(--image-border-radius) !important;
    border-bottom-left-radius: 0 !important;
    border-bottom-right-radius: 0 !important;
  }
  
  /* Apply title styles */
  .main-collection .card-title {
    font-size: var(--title-font-size) !important;
    font-weight: var(--title-font-weight) !important;
    color: var(--title-color) !important;
  }
  
  /* Apply price styles - target card-text that is not text-muted (price) */
  .main-collection .card-body .card-text:not(.text-muted) {
    font-size: var(--price-font-size) !important;
    font-weight: var(--price-font-weight) !important;
    color: var(--price-color) !important;
  }
  
  /* Apply vendor styles - target the text-muted card-text (vendor) */
  .main-collection .card-body .card-text.text-muted {
    font-size: var(--vendor-font-size) !important;
    font-weight: var(--vendor-font-weight) !important;
    color: var(--vendor-color) !important;
  }
  
  .main-collection .row.alignment-flex-start {
    justify-content: flex-start !important;
  }
  
  .main-collection .row.alignment-center {
    justify-content: center !important;
  }
  
  .main-collection .row.alignment-flex-end {
    justify-content: flex-end !important;
  }
  
  /* Center single card */
  .main-collection .row.single-card {
    justify-content: center !important;
  }
</style>

