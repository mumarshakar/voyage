{% schema %}
{
  "name": "Page Header",
  "settings": [
    {
      "type": "text",
      "id": "custom_title",
      "label": "Custom Title",
      "info": "Leave empty to use page title"
    },
    {
      "type": "checkbox",
      "id": "show_page_content",
      "label": "Show Page Content",
      "default": true,
      "info": "Display the page content below the title"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size (px)",
      "min": 24,
      "max": 72,
      "step": 2,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Page Header"
    }
  ]
}
{% endschema %}

{%- liquid
  assign custom_title = section.settings.custom_title
  assign show_page_content = section.settings.show_page_content | default: true
  assign background_color = section.settings.background_color | default: '#FFFFFF'
  assign title_color = section.settings.title_color | default: '#333333'
  assign padding_top = section.settings.padding_top | default: 120
  assign padding_bottom = section.settings.padding_bottom | default: 60
  assign title_font_size = section.settings.title_font_size | default: 48
  assign margin_top = section.settings.margin_top | default: 0
  
  if custom_title != blank
    assign page_title_text = custom_title
  else
    assign page_title_text = page.title
  endif
-%}

<section class="page-header-section" 
         style="background-color: {{ background_color }};
                padding-top: {{ padding_top }}px;
                padding-bottom: {{ padding_bottom }}px;
                margin-top: {{ margin_top }}px;">
  <div class="container">
    <h1 class="page-title" style="color: {{ title_color }}; font-size: {{ title_font_size }}px;">
      {{ page_title_text }}
    </h1>
    {% if show_page_content and page.content != blank %}
      <div class="page-content" style="margin-top: 2rem; color: #666;">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .page-header-section {
    text-align: center;
  }
  
  .page-header-section .page-title {
    font-weight: bold;
    margin-bottom: 1rem;
  }
  
  .page-header-section .page-content {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
</style>

