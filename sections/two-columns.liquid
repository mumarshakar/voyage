{%- liquid
  assign swap_columns = section.settings.swap_columns
  assign stack_on_mobile = section.settings.stack_on_mobile
  assign column_gap = section.settings.column_gap | default: 30
  
  assign column1_content_type = section.settings.column1_content_type | default: 'text'
  assign column2_content_type = section.settings.column2_content_type | default: 'text'
  
  assign section_bg_color = section.settings.section_bg_color | default: '#FFFFFF'
  assign section_padding_top = section.settings.section_padding_top | default: 80
  assign section_padding_bottom = section.settings.section_padding_bottom | default: 80
  assign section_padding_horizontal = section.settings.section_padding_horizontal | default: 20
  assign section_min_height = section.settings.section_min_height | default: 400
  assign full_width = section.settings.full_width
  
-%}

<section class="two-columns-section" 
         style="background-color: {{ section_bg_color }};
                padding-top: {{ section_padding_top }}px;
                padding-bottom: {{ section_padding_bottom }}px;
                padding-left: {{ section_padding_horizontal }}px;
                padding-right: {{ section_padding_horizontal }}px;
                min-height: {{ section_min_height }}px;">
  
  <div class="{% if full_width %}container-fluid{% else %}container{% endif %}">
    <div class="two-columns-wrapper row g-0" 
         style="gap: {{ column_gap }}px;"
         data-swap="{{ swap_columns }}"
         data-stack-mobile="{{ stack_on_mobile }}">
      
      {% comment %} Column 1 {% endcomment %}
      <div class="two-column two-column-1 col-md-6 {% if stack_on_mobile %}col-12{% else %}col-6{% endif %}" 
           style="order: {% if swap_columns %}2{% else %}1{% endif %};">
        {% render 'two-columns-content', 
           column: '1',
           content_type: column1_content_type,
           section: section %}
      </div>
      
      {% comment %} Column 2 {% endcomment %}
      <div class="two-column two-column-2 col-md-6 {% if stack_on_mobile %}col-12{% else %}col-6{% endif %}" 
           style="order: {% if swap_columns %}1{% else %}2{% endif %};">
        {% render 'two-columns-content', 
           column: '2',
           content_type: column2_content_type,
           section: section %}
      </div>
      
    </div>
  </div>
</section>

<style>
  .two-columns-section {
    position: relative;
  }
  
  .two-columns-wrapper {
    display: flex;
    align-items: stretch;
    flex-wrap: wrap;
  }
  
  .two-column {
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }
  
  .two-column-content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .two-column-image,
  .two-column-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .two-column-video-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .two-column-video-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .two-column-text {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .two-column-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    pointer-events: none;
  }
  
  .two-column-text-content {
    position: relative;
    z-index: 2;
  }
  
  @media (max-width: 767px) {
    .two-columns-wrapper[data-stack-mobile="true"] {
      flex-direction: column;
    }
    
    .two-columns-wrapper[data-stack-mobile="true"] .two-column {
      width: 100% !important;
      flex: 0 0 100% !important;
      max-width: 100% !important;
    }
  }
</style>

