      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding (px)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
