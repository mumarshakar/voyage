{% endschema %}

{%- liquid
  assign heading = section.settings.heading | default: ''
  assign subheading = section.settings.subheading | default: ''
  assign text_content = section.settings.text_content | default: ''
  assign heading_color = section.settings.heading_color | default: '#333333'
  assign heading_font_size = section.settings.heading_font_size | default: 36
  assign heading_font_weight = section.settings.heading_font_weight | default: '600'
  assign heading_font_family = section.settings.heading_font_family | default: 'sans-serif'
  assign heading_text_transform = section.settings.heading_text_transform | default: 'none'
  assign subheading_color = section.settings.subheading_color | default: '#666666'
  assign subheading_font_size = section.settings.subheading_font_size | default: 20
  assign subheading_font_weight = section.settings.subheading_font_weight | default: '400'
  assign subheading_font_family = section.settings.subheading_font_family | default: 'sans-serif'
  assign subheading_text_transform = section.settings.subheading_text_transform | default: 'none'
  assign text_color = section.settings.text_color | default: '#333333'
  assign text_font_size = section.settings.text_font_size | default: 16
  assign text_font_weight = section.settings.text_font_weight | default: '400'
  assign text_font_family = section.settings.text_font_family | default: 'sans-serif'
  assign text_line_height = section.settings.text_line_height | default: 1.6
  assign text_alignment = section.settings.text_alignment | default: 'left'
  assign content_max_width = section.settings.content_max_width | default: 800
  assign background_color = section.settings.background_color | default: '#FFFFFF'
  assign background_image = section.settings.background_image
  assign background_size = section.settings.background_size | default: 'cover'
  assign background_overlay_opacity = section.settings.background_overlay_opacity | default: 0
  assign padding_top = section.settings.padding_top | default: 80
  assign padding_bottom = section.settings.padding_bottom | default: 80
  assign padding_horizontal = section.settings.padding_horizontal | default: 20
  assign margin_top = section.settings.margin_top | default: 0
  assign margin_bottom = section.settings.margin_bottom | default: 0
  assign heading_margin_bottom = section.settings.heading_margin_bottom | default: 20
  assign subheading_margin_bottom = section.settings.subheading_margin_bottom | default: 20
  
  if heading_font_family == 'serif'
    assign heading_font_family_value = "'Playfair Display', 'Times New Roman', serif"
  else
    assign heading_font_family_value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
  endif
  
  if subheading_font_family == 'serif'
    assign subheading_font_family_value = "'Playfair Display', 'Times New Roman', serif"
  else
    assign subheading_font_family_value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
  endif
  
  if text_font_family == 'serif'
    assign text_font_family_value = "'Playfair Display', 'Times New Roman', serif"
  else
    assign text_font_family_value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
  endif
  
  if background_overlay_opacity > 0
    assign overlay_opacity_decimal = background_overlay_opacity | divided_by: 100.0
  else
    assign overlay_opacity_decimal = 0
  endif
-%}

<section class="custom-text-section" 
         style="background-color: {{ background_color }};
                {% if background_image != blank %}background-image: url('{{ background_image | img_url: '1920x1080' }}');{% endif %}
                background-size: {{ background_size }};
                background-position: center;
                background-repeat: no-repeat;
                padding-top: {{ padding_top }}px;
                padding-bottom: {{ padding_bottom }}px;
                padding-left: {{ padding_horizontal }}px;
                padding-right: {{ padding_horizontal }}px;
                margin-top: {{ margin_top }}px;
                margin-bottom: {{ margin_bottom }}px;
                position: relative;
                overflow: hidden;">
  
  {% if background_image != blank and background_overlay_opacity > 0 %}
    <div class="custom-text-overlay" style="background-color: #000000; opacity: {{ overlay_opacity_decimal }};"></div>
  {% endif %}
  
  <div class="container">
    <div class="custom-text-content" style="max-width: {{ content_max_width }}px; margin: 0 auto; text-align: {{ text_alignment }};">
      {% if heading != blank %}
        <h2 class="custom-text-heading" 
            style="color: {{ heading_color }};
                   font-size: {{ heading_font_size }}px;
                   font-weight: {{ heading_font_weight }};
                   font-family: {{ heading_font_family_value }};
                   text-transform: {{ heading_text_transform }};
                   margin-bottom: {{ heading_margin_bottom }}px;
                   margin-top: 0;">
          {{ heading }}
        </h2>
      {% endif %}
      
      {% if subheading != blank %}
        <h3 class="custom-text-subheading" 
            style="color: {{ subheading_color }};
                   font-size: {{ subheading_font_size }}px;
                   font-weight: {{ subheading_font_weight }};
                   font-family: {{ subheading_font_family_value }};
                   text-transform: {{ subheading_text_transform }};
                   margin-bottom: {{ subheading_margin_bottom }}px;
                   margin-top: 0;">
          {{ subheading }}
        </h3>
      {% endif %}
      
      {% if text_content != blank %}
        <div class="custom-text-body" 
             style="color: {{ text_color }};
                    font-size: {{ text_font_size }}px;
                    font-weight: {{ text_font_weight }};
                    font-family: {{ text_font_family_value }};
                    line-height: {{ text_line_height }};
                    margin: 0;">
          {{ text_content | newline_to_br }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .custom-text-section {
    position: relative;
  }
  
  .custom-text-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    pointer-events: none;
  }
  
  .custom-text-content {
    position: relative;
    z-index: 2;
  }
  
  .custom-text-heading {
    word-wrap: break-word;
  }
  
  .custom-text-subheading {
    word-wrap: break-word;
  }
  
  .custom-text-body {
    word-wrap: break-word;
    white-space: pre-line;
  }
  
  .custom-text-body p {
    margin-bottom: 1rem;
  }
  
  .custom-text-body p:last-child {
    margin-bottom: 0;
  }
</style>

