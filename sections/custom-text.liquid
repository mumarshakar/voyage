{% schema %}
{
  "name": "Custom Text",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your Subheading Here"
    },
    {
      "type": "select",
      "id": "content_type",
      "label": "Content Type",
      "options": [
        {
          "value": "richtext",
          "label": "Rich Text Editor"
        },
        {
          "value": "html",
          "label": "Raw HTML"
        }
      ],
      "default": "richtext",
      "info": "Choose between rich text editor or raw HTML"
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Text/HTML Content",
      "default": "<p>Add your custom text content here. You can include multiple paragraphs and format your text as needed. HTML is supported.</p>",
      "info": "Supports rich text formatting and HTML. Use the editor to add links, format text, etc."
    },
    {
      "type": "html",
      "id": "html_content",
      "label": "Raw HTML Content",
      "default": "<p>Add your HTML content here. You can use any HTML tags and inline styles.</p>",
      "info": "For advanced users: Write raw HTML code. This will be rendered as-is."
    },
    {
      "type": "header",
      "content": "Link Styling"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#333333",
      "info": "Color for links in the content"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link Hover Color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "link_text_decoration",
      "label": "Link Text Decoration",
      "options": [
        {
          "value": "underline",
          "label": "Underline"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "underline"
    },
    {
      "type": "header",
      "content": "Advanced Styling"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS",
      "info": "Add custom CSS for advanced styling. Use selector: #custom-text-section-id (check HTML source for exact ID)"
    },
    {
      "type": "header",
      "content": "Layout & Alignment"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "justify",
          "label": "Justify"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "label": "Content Max Width (px)",
      "min": 400,
      "max": 1200,
      "step": 50,
      "default": 800,
      "unit": "px",
      "info": "Maximum width of the text content"
    },
    {
      "type": "header",
      "content": "Section Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Optional background image"
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "Background Image Size",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "background_overlay_opacity",
      "label": "Background Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 0,
      "unit": "%",
      "info": "Dark overlay on background image"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding (px)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "label": "Heading Bottom Margin (px)",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_margin_bottom",
      "label": "Subheading Bottom Margin (px)",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}

{%- liquid
  assign heading = section.settings.heading | default: ''
  assign subheading = section.settings.subheading | default: ''
  assign content_type = section.settings.content_type | default: 'richtext'
  assign text_content = section.settings.text_content | default: ''
  assign html_content = section.settings.html_content | default: ''
  # Use theme settings ONLY for all typography (no section-level overrides)
  assign heading_color = settings.heading_color | default: '#333333'
  assign heading_font_size = settings.heading_font_size | default: 36
  assign heading_font_weight = settings.heading_font_weight | default: '600'
  assign heading_font_family = settings.heading_font_family | default: 'segoe'
  assign heading_line_height = settings.heading_line_height | default: 1.2
  assign heading_letter_spacing = settings.heading_letter_spacing | default: 0
  
  assign subheading_color = settings.subheading_color | default: '#666666'
  assign subheading_font_size = settings.subheading_font_size | default: 20
  assign subheading_font_weight = settings.subheading_font_weight | default: '400'
  assign subheading_font_family = settings.subheading_font_family | default: 'segoe'
  assign subheading_line_height = settings.subheading_line_height | default: 1.4
  assign subheading_letter_spacing = settings.subheading_letter_spacing | default: 0
  
  assign text_color = settings.body_text_color | default: '#333333'
  assign text_font_size = settings.body_font_size | default: 16
  assign text_font_weight = settings.body_font_weight | default: '400'
  assign text_font_family = settings.body_font_family | default: 'segoe'
  assign text_line_height = settings.body_line_height | default: 1.6
  assign text_letter_spacing = settings.body_letter_spacing | default: 0
  assign text_word_spacing = settings.body_word_spacing | default: 0
  assign link_color = section.settings.link_color | default: '#333333'
  assign link_hover_color = section.settings.link_hover_color | default: '#666666'
  assign link_text_decoration = section.settings.link_text_decoration | default: 'underline'
  assign custom_css = section.settings.custom_css | default: ''
  assign text_alignment = section.settings.text_alignment | default: 'left'
  assign content_max_width = section.settings.content_max_width | default: 800
  assign background_color = section.settings.background_color | default: '#FFFFFF'
  assign background_image = section.settings.background_image
  assign background_size = section.settings.background_size | default: 'cover'
  assign background_overlay_opacity = section.settings.background_overlay_opacity | default: 0
  assign padding_top = section.settings.padding_top | default: 80
  assign padding_bottom = section.settings.padding_bottom | default: 80
  assign padding_horizontal = section.settings.padding_horizontal | default: 20
  assign margin_top = section.settings.margin_top | default: 0
  assign margin_bottom = section.settings.margin_bottom | default: 0
  assign heading_margin_bottom = section.settings.heading_margin_bottom | default: 20
  assign subheading_margin_bottom = section.settings.subheading_margin_bottom | default: 20
  
  case heading_font_family
    when 'playfair'
      assign heading_font_family_value = "'Playfair Display', 'Times New Roman', serif"
    when 'merriweather'
      assign heading_font_family_value = "'Merriweather', Georgia, serif"
    when 'georgia'
      assign heading_font_family_value = "Georgia, 'Times New Roman', serif"
    when 'times'
      assign heading_font_family_value = "'Times New Roman', Times, serif"
    when 'arial'
      assign heading_font_family_value = "Arial, Helvetica, sans-serif"
    when 'helvetica'
      assign heading_font_family_value = "Helvetica, Arial, sans-serif"
    when 'verdana'
      assign heading_font_family_value = "Verdana, Geneva, sans-serif"
    when 'courier'
      assign heading_font_family_value = "'Courier New', Courier, monospace"
    else
      assign heading_font_family_value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
  endcase
  
  case subheading_font_family
    when 'playfair'
      assign subheading_font_family_value = "'Playfair Display', 'Times New Roman', serif"
    when 'merriweather'
      assign subheading_font_family_value = "'Merriweather', Georgia, serif"
    when 'georgia'
      assign subheading_font_family_value = "Georgia, 'Times New Roman', serif"
    when 'times'
      assign subheading_font_family_value = "'Times New Roman', Times, serif"
    when 'arial'
      assign subheading_font_family_value = "Arial, Helvetica, sans-serif"
    when 'helvetica'
      assign subheading_font_family_value = "Helvetica, Arial, sans-serif"
    when 'verdana'
      assign subheading_font_family_value = "Verdana, Geneva, sans-serif"
    when 'courier'
      assign subheading_font_family_value = "'Courier New', Courier, monospace"
    else
      assign subheading_font_family_value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
  endcase
  
  case text_font_family
    when 'playfair'
      assign text_font_family_value = "'Playfair Display', 'Times New Roman', serif"
    when 'merriweather'
      assign text_font_family_value = "'Merriweather', Georgia, serif"
    when 'georgia'
      assign text_font_family_value = "Georgia, 'Times New Roman', serif"
    when 'times'
      assign text_font_family_value = "'Times New Roman', Times, serif"
    when 'arial'
      assign text_font_family_value = "Arial, Helvetica, sans-serif"
    when 'helvetica'
      assign text_font_family_value = "Helvetica, Arial, sans-serif"
    when 'verdana'
      assign text_font_family_value = "Verdana, Geneva, sans-serif"
    when 'courier'
      assign text_font_family_value = "'Courier New', Courier, monospace"
    else
      assign text_font_family_value = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"
  endcase
  
  if background_overlay_opacity > 0
    assign overlay_opacity_decimal = background_overlay_opacity | divided_by: 100.0
  else
    assign overlay_opacity_decimal = 0
  endif
-%}

<section class="custom-text-section" 
         id="custom-text-{{ section.id }}"
         style="background-color: {{ background_color }};
                {% if background_image != blank %}background-image: url('{{ background_image | image_url: width: 1920 }}');{% endif %}
                background-size: {{ background_size }};
                background-position: center;
                background-repeat: no-repeat;
                padding-top: {{ padding_top }}px;
                padding-bottom: {{ padding_bottom }}px;
                padding-left: {{ padding_horizontal }}px;
                padding-right: {{ padding_horizontal }}px;
                margin-top: {{ margin_top }}px;
                margin-bottom: {{ margin_bottom }}px;
                position: relative;
                overflow: hidden;">
  
  {% if background_image != blank and background_overlay_opacity > 0 %}
    <div class="custom-text-overlay" style="background-color: #000000; opacity: {{ overlay_opacity_decimal }};"></div>
  {% endif %}
  
  <div class="container">
    <div class="custom-text-content" style="max-width: {{ content_max_width }}px; margin: 0 auto; text-align: {{ text_alignment }};">
      {% if heading != blank %}
        <h2 class="custom-text-heading" 
            style="color: {{ heading_color }};
                   font-size: {{ heading_font_size }}px;
                   font-weight: {{ heading_font_weight }};
                   font-family: {{ heading_font_family_value }};
                   line-height: {{ heading_line_height }};
                   letter-spacing: {{ heading_letter_spacing }}px;
                   margin-bottom: {{ heading_margin_bottom }}px;
                   margin-top: 0;">
          {{ heading }}
        </h2>
      {% endif %}
      
      {% if subheading != blank %}
        <h3 class="custom-text-subheading" 
            style="color: {{ subheading_color }};
                   font-size: {{ subheading_font_size }}px;
                   font-weight: {{ subheading_font_weight }};
                   font-family: {{ subheading_font_family_value }};
                   line-height: {{ subheading_line_height }};
                   letter-spacing: {{ subheading_letter_spacing }}px;
                   margin-bottom: {{ subheading_margin_bottom }}px;
                   margin-top: 0;">
          {{ subheading }}
        </h3>
      {% endif %}
      
      {% if content_type == 'html' and html_content != blank %}
        <div class="custom-text-body custom-text-html" 
             style="color: {{ text_color }};
                    font-size: {{ text_font_size }}px;
                    font-weight: {{ text_font_weight }};
                    font-family: {{ text_font_family_value }};
                    line-height: {{ text_line_height }};
                    letter-spacing: {{ text_letter_spacing }}px;
                    word-spacing: {{ text_word_spacing }}px;
                    margin: 0;">
          {{ html_content }}
        </div>
      {% elsif content_type == 'richtext' and text_content != blank %}
        <div class="custom-text-body custom-text-richtext" 
             style="color: {{ text_color }};
                    font-size: {{ text_font_size }}px;
                    font-weight: {{ text_font_weight }};
                    font-family: {{ text_font_family_value }};
                    line-height: {{ text_line_height }};
                    letter-spacing: {{ text_letter_spacing }}px;
                    word-spacing: {{ text_word_spacing }}px;
                    margin: 0;">
          {{ text_content }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .custom-text-section {
    position: relative;
  }
  
  .custom-text-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    pointer-events: none;
  }
  
  .custom-text-content {
    position: relative;
    z-index: 2;
  }
  
  .custom-text-heading {
    word-wrap: break-word;
  }
  
  .custom-text-subheading {
    word-wrap: break-word;
  }
  
  .custom-text-body {
    word-wrap: break-word;
  }
  
  .custom-text-body p {
    margin-bottom: 1rem;
  }
  
  .custom-text-body p:last-child {
    margin-bottom: 0;
  }
  
  .custom-text-body h1,
  .custom-text-body h2,
  .custom-text-body h3,
  .custom-text-body h4,
  .custom-text-body h5,
  .custom-text-body h6 {
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }
  
  .custom-text-body h1:first-child,
  .custom-text-body h2:first-child,
  .custom-text-body h3:first-child,
  .custom-text-body h4:first-child,
  .custom-text-body h5:first-child,
  .custom-text-body h6:first-child {
    margin-top: 0;
  }
  
  .custom-text-body ul,
  .custom-text-body ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }
  
  .custom-text-body li {
    margin-bottom: 0.5rem;
  }
  
  .custom-text-body a {
    color: {{ link_color }};
    text-decoration: {{ link_text_decoration }};
    transition: color 0.3s ease;
  }
  
  .custom-text-body a:hover {
    color: {{ link_hover_color }};
    opacity: 1;
  }
  
  .custom-text-body strong,
  .custom-text-body b {
    font-weight: 600;
  }
  
  .custom-text-body em,
  .custom-text-body i {
    font-style: italic;
  }
  
  .custom-text-body blockquote {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    border-left: 3px solid currentColor;
    opacity: 0.8;
  }
  
  .custom-text-body img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
  }
  
  .custom-text-html {
    /* Allow HTML content to render with full styling */
  }
  
  .custom-text-html * {
    /* Reset can be overridden by custom CSS */
  }
  
  {% if custom_css != blank %}
    /* Custom CSS */
    {{ custom_css }}
  {% endif %}
</style>
