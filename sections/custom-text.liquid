{% schema %}
{
  "name": "Custom Text",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your Subheading Here"
    },
    {
      "type": "textarea",
      "id": "text_content",
      "label": "Text Content",
