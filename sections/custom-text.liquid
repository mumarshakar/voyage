{% schema %}
{
  "name": "Custom Text",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Your Subheading Here"
    },
    {
      "type": "select",
      "id": "content_type",
      "label": "Content Type",
      "options": [
        {
          "value": "richtext",
          "label": "Rich Text Editor"
        },
        {
          "value": "html",
          "label": "Raw HTML"
        }
      ],
      "default": "richtext",
      "info": "Choose between rich text editor or raw HTML"
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Text/HTML Content",
      "default": "<p>Add your custom text content here. You can include multiple paragraphs and format your text as needed. HTML is supported.</p>",
      "info": "Supports rich text formatting and HTML. Use the editor to add links, format text, etc."
    },
    {
      "type": "html",
      "id": "html_content",
      "label": "Raw HTML Content",
      "default": "<p>Add your HTML content here. You can use any HTML tags and inline styles.</p>",
      "info": "For advanced users: Write raw HTML code. This will be rendered as-is."
    },
    {
      "type": "header",
      "content": "Rich Text Styling"
    },
    {
      "type": "range",
      "id": "richtext_font_size",
      "label": "Rich Text Font Size (px)",
      "min": 12,
      "max": 32,
      "step": 1,
      "default": 16,
      "unit": "px",
      "info": "Font size for rich text content"
    },
    {
      "type": "select",
      "id": "richtext_font_weight",
      "label": "Rich Text Font Weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "color",
      "id": "richtext_text_color",
      "label": "Rich Text Color",
      "default": "#333333",
      "info": "Text color for rich text content"
    },
    {
      "type": "range",
      "id": "richtext_line_height",
      "label": "Rich Text Line Height",
      "min": 1.0,
      "max": 2.5,
      "step": 0.1,
      "default": 1.6,
      "info": "Line height multiplier for rich text"
    },
    {
      "type": "range",
      "id": "richtext_letter_spacing",
      "label": "Rich Text Letter Spacing (px)",
      "min": -2,
      "max": 5,
      "step": 0.1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "richtext_word_spacing",
      "label": "Rich Text Word Spacing (px)",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "richtext_paragraph_spacing",
      "label": "Paragraph Spacing (px)",
      "min": 8,
      "max": 40,
      "step": 2,
      "default": 16,
      "unit": "px",
      "info": "Margin bottom between paragraphs"
    },
    {
      "type": "header",
      "content": "Link Styling"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link Color",
      "default": "#333333",
      "info": "Color for links in the content"
    },
    {
      "type": "color",
      "id": "link_hover_color",
      "label": "Link Hover Color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "link_text_decoration",
      "label": "Link Text Decoration",
      "options": [
        {
          "value": "underline",
          "label": "Underline"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "underline"
    },
    {
      "type": "header",
      "content": "Advanced Styling"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS",
      "info": "Add custom CSS for advanced styling. Use selector: #custom-text-section-id (check HTML source for exact ID)"
    },
    {
      "type": "header",
      "content": "Layout & Alignment"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "justify",
          "label": "Justify"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "label": "Content Max Width (px)",
      "min": 400,
      "max": 1200,
      "step": 50,
      "default": 800,
      "unit": "px",
      "info": "Maximum width of the text content"
    },
    {
      "type": "header",
      "content": "Section Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Optional background image"
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "Background Image Size",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover"
    },
    {
      "type": "range",
      "id": "background_overlay_opacity",
      "label": "Background Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 0,
      "unit": "%",
      "info": "Dark overlay on background image"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding (px)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom Margin (px)",
      "min": 0,
      "max": 100,
      "step": 10,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_margin_bottom",
      "label": "Heading Bottom Margin (px)",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_margin_bottom",
      "label": "Subheading Bottom Margin (px)",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Section Height"
    },
    {
      "type": "range",
      "id": "section_height_desktop",
      "label": "Section Height - Desktop (px)",
      "min": 200,
      "max": 1500,
      "step": 50,
      "default": 400,
      "unit": "px",
      "info": "Height of section on desktop screens (992px and above)"
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "label": "Section Height - Mobile (px)",
      "min": 200,
      "max": 1500,
      "step": 50,
      "default": 300,
      "unit": "px",
      "info": "Height of section on mobile screens (below 992px)"
    },
    {
      "type": "header",
      "content": "List Styling (ul, ol)"
    },
    {
      "type": "range",
      "id": "list_line_height",
      "label": "List Line Height (rem)",
      "min": 1.0,
      "max": 5.0,
      "step": 0.5,
      "default": 3.0,
      "unit": "rem",
      "info": "Line height for unordered and ordered lists"
    },
    {
      "type": "range",
      "id": "list_font_size",
      "label": "List Font Size (px)",
      "min": 12,
      "max": 32,
      "step": 1,
      "default": 18,
      "unit": "px",
      "info": "Font size for list items"
    },
    {
      "type": "range",
      "id": "list_font_weight",
      "label": "List Font Weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "default": 400,
      "info": "Font weight for list items (100-900)"
    },
    {
      "type": "select",
      "id": "list_text_align",
      "label": "List Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "justify",
          "label": "Justify"
        }
      ],
      "default": "justify",
      "info": "Text alignment for list items"
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}

{%- liquid
  assign heading = section.settings.heading | default: ''
  assign subheading = section.settings.subheading | default: ''
  assign content_type = section.settings.content_type | default: 'richtext'
  assign text_content = section.settings.text_content | default: ''
  assign html_content = section.settings.html_content | default: ''
  # All typography comes from theme settings via theme.liquid - no hardcoded values
  assign link_color = section.settings.link_color | default: '#333333'
  assign link_hover_color = section.settings.link_hover_color | default: '#666666'
  assign link_text_decoration = section.settings.link_text_decoration | default: 'underline'
  assign custom_css = section.settings.custom_css | default: ''
  assign text_alignment = section.settings.text_alignment | default: 'left'
  assign content_max_width = section.settings.content_max_width | default: 800
  assign background_color = section.settings.background_color | default: '#FFFFFF'
  assign background_image = section.settings.background_image
  assign background_size = section.settings.background_size | default: 'cover'
  assign background_overlay_opacity = section.settings.background_overlay_opacity | default: 0
  assign padding_top = section.settings.padding_top | default: 80
  assign padding_bottom = section.settings.padding_bottom | default: 80
  assign padding_horizontal = section.settings.padding_horizontal | default: 20
  assign margin_top = section.settings.margin_top | default: 0
  assign margin_bottom = section.settings.margin_bottom | default: 0
  assign heading_margin_bottom = section.settings.heading_margin_bottom | default: 20
  assign subheading_margin_bottom = section.settings.subheading_margin_bottom | default: 20
  assign section_height_desktop = section.settings.section_height_desktop | default: 400
  assign section_height_mobile = section.settings.section_height_mobile | default: 300
  assign list_line_height = section.settings.list_line_height | default: 3.0
  assign list_font_size = section.settings.list_font_size | default: 18
  assign list_font_weight = section.settings.list_font_weight | default: 400
  assign list_text_align = section.settings.list_text_align | default: 'justify'
  assign richtext_font_size = section.settings.richtext_font_size | default: 16
  assign richtext_font_weight = section.settings.richtext_font_weight | default: '400'
  assign richtext_text_color = section.settings.richtext_text_color | default: '#333333'
  assign richtext_line_height = section.settings.richtext_line_height | default: 1.6
  assign richtext_letter_spacing = section.settings.richtext_letter_spacing | default: 0
  assign richtext_word_spacing = section.settings.richtext_word_spacing | default: 0
  assign richtext_paragraph_spacing = section.settings.richtext_paragraph_spacing | default: 16
  
  if background_overlay_opacity > 0
    assign overlay_opacity_decimal = background_overlay_opacity | divided_by: 100.0
  else
    assign overlay_opacity_decimal = 0
  endif
-%}

<section class="custom-text-section" 
         id="custom-text-{{ section.id }}"
         style="background-color: {{ background_color }};
                {% if background_image != blank %}background-image: url('{{ background_image | image_url: width: 1920 }}');{% endif %}
                background-size: {{ background_size }};
                background-position: center;
                background-repeat: no-repeat;
                padding-top: {{ padding_top }}px;
                padding-bottom: {{ padding_bottom }}px;
                padding-left: {{ padding_horizontal }}px;
                padding-right: {{ padding_horizontal }}px;
                margin-top: {{ margin_top }}px;
                margin-bottom: {{ margin_bottom }}px;
                position: relative;
                overflow: hidden;">
  
  {% if background_image != blank and background_overlay_opacity > 0 %}
    <div class="custom-text-overlay" style="background-color: #000000; opacity: {{ overlay_opacity_decimal }};"></div>
  {% endif %}
  
  <div class="container">
    <div class="custom-text-content" style="max-width: {{ content_max_width }}px; margin: 0 auto; text-align: {{ text_alignment }};">
      {% if heading != blank %}
        <h2 class="custom-text-heading" 
            style="margin-bottom: {{ heading_margin_bottom }}px; margin-top: 0;">
          {{ heading }}
        </h2>
      {% endif %}
      
      {% if subheading != blank %}
        <h3 class="custom-text-subheading" 
            style="margin-bottom: {{ subheading_margin_bottom }}px; margin-top: 0;">
          {{ subheading }}
        </h3>
      {% endif %}
      
      {% if content_type == 'html' and html_content != blank %}
        <div class="custom-text-body custom-text-html" style="margin: 0;">
          {{ html_content }}
        </div>
      {% elsif content_type == 'richtext' and text_content != blank %}
        <div class="custom-text-body custom-text-richtext" style="margin: 0; letter-spacing: {{ richtext_letter_spacing }}px; word-spacing: {{ richtext_word_spacing }}px;">
          {{ text_content }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .custom-text-section {
    position: relative;
  }
  
  .custom-text-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    pointer-events: none;
  }
  
  .custom-text-content {
    position: relative;
    z-index: 2;
  }
  
  .custom-text-heading {
    word-wrap: break-word;
  }
  
  .custom-text-subheading {
    word-wrap: break-word;
  }
  
  .custom-text-body {
    word-wrap: break-word;
  }
  
  .custom-text-body p {
    margin-bottom: {{ richtext_paragraph_spacing }}px;
  }
  
  .custom-text-body p:last-child {
    margin-bottom: 0;
  }
  
  .custom-text-richtext {
    /* Typography (font-size, font-weight, color, line-height) now comes from theme settings via global CSS */
    letter-spacing: {{ richtext_letter_spacing }}px !important;
    word-spacing: {{ richtext_word_spacing }}px !important;
  }
  
  .custom-text-richtext * {
    color: inherit;
  }
  
  .custom-text-richtext p {
    margin-bottom: {{ richtext_paragraph_spacing }}px;
  }
  
  .custom-text-richtext p:last-child {
    margin-bottom: 0;
  }
  
  .custom-text-body h1,
  .custom-text-body h2,
  .custom-text-body h3,
  .custom-text-body h4,
  .custom-text-body h5,
  .custom-text-body h6 {
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }
  
  .custom-text-body h1:first-child,
  .custom-text-body h2:first-child,
  .custom-text-body h3:first-child,
  .custom-text-body h4:first-child,
  .custom-text-body h5:first-child,
  .custom-text-body h6:first-child {
    margin-top: 0;
  }
  
  .custom-text-body ul,
  .custom-text-body ol {
    margin-bottom: 1rem;
    padding-left: 2rem;
    /* Typography styles (font-size, line-height, font-weight, text-align) come from theme settings via theme.liquid */
  }
  
  .custom-text-body li {
    margin-bottom: 0.5rem;
  }
  
  .custom-text-body a {
    color: {{ link_color }};
    text-decoration: {{ link_text_decoration }};
    transition: color 0.3s ease;
  }
  
  .custom-text-body a:hover {
    color: {{ link_hover_color }};
    opacity: 1;
  }
  
  .custom-text-body strong,
  .custom-text-body b {
    font-weight: 600;
  }
  
  .custom-text-body em,
  .custom-text-body i {
    font-style: italic;
  }
  
  .custom-text-body blockquote {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    border-left: 3px solid currentColor;
    opacity: 0.8;
  }
  
  .custom-text-body img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
  }
  
  .custom-text-html {
    /* Allow HTML content to render with full styling */
  }
  
  .custom-text-html * {
    /* Reset can be overridden by custom CSS */
  }
  
  {% if custom_css != blank %}
    /* Custom CSS */
    {{ custom_css }}
  {% endif %}
  
  /* Section Height - Desktop */
  @media (min-width: 992px) {
    #custom-text-{{ section.id }} {
      min-height: {{ section_height_desktop }}px !important;
      height: {{ section_height_desktop }}px !important;
    }
  }
  
  /* Section Height - Mobile */
  @media (max-width: 991px) {
    #custom-text-{{ section.id }} {
      min-height: {{ section_height_mobile }}px !important;
      height: {{ section_height_mobile }}px !important;
    }
  }
</style>
