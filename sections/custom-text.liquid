      "default": "400"
    },
    {
      "type": "select",
      "id": "subheading_font_family",
      "label": "Subheading Font Family",
      "options": [
        {
          "value": "serif",
          "label": "Serif (Playfair Display)"
        },
        {
          "value": "sans-serif",
          "label": "Sans-serif (Default)"
        }
      ],
      "default": "sans-serif"
    },
    {
      "type": "select",
      "id": "subheading_text_transform",
      "label": "Subheading Text Transform",
