<div class="container py-5 list-collections-section">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {% for collection in collections %}
      {% if collection.handle == 'all' %}{% continue %}{% endif %}
      <div class="col">
        <div class="card h-100">
          <a href="/collections/{{ collection.handle }}">
            {% if collection.image %}
              <img src="{{ collection.image | img_url: 'large' }}" alt="{{ collection.title }}" class="card-img-top">
            {% else %}
              {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'card-img-top' }}
            {% endif %}
          </a>
          <div class="card-body d-flex flex-column">
            <h2 class="card-title">{{ collection.title }}</h2>
            <div class="card-text rte">
              {{ collection.description | truncatewords: 20 }}
            </div>
            <a href="/collections/{{ collection.handle }}" class="btn btn-primary mt-auto">View Services</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .list-collections-section .card-title {
    font-size: {{ section.settings.title_font_size }}px !important;
    line-height: {{ section.settings.title_line_height }} !important;
    text-transform: {{ section.settings.title_text_transform }} !important;
  }
</style>

{% schema %}
{
  "name": "List Collections",
  "settings": [
    {
      "type": "text",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "Discover our collection of"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Card Title Font Size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "title_line_height",
      "label": "Card Title Line Height",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "default": 1.2
    },
    {
      "type": "select",
      "id": "title_text_transform",
      "label": "Card Title Text Transform",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "none"
    }
  ],
  "presets": [
    {
      "name": "List Collections"
    }
  ]
}
{% endschema %}
