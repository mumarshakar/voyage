{% assign collection_count = 0 %}
{% for collection in collections %}
  {% if collection.handle != 'all' %}
    {% assign collection_count = collection_count | plus: 1 %}
  {% endif %}
{% endfor %}

<div class="container py-5 list-collections-section">
  <div class="row row-cols-{{ section.settings.columns_mobile }} row-cols-md-{{ section.settings.columns_tablet }} row-cols-lg-{{ section.settings.columns_desktop }} g-4 alignment-{{ section.settings.alignment }}{% if collection_count == 1 %} single-card{% endif %}">
    {% for collection in collections %}
      {% if collection.handle == 'all' %}{% continue %}{% endif %}
      <div class="col">
        <div class="card h-100">
          <a href="{{ routes.collections_url }}/{{ collection.handle }}">
            {% if collection.image %}
              <img src="{{ collection.image | image_url: width: 800 }}" 
                   alt="{{ collection.title }}" 
                   class="card-img-top"
                   width="{{ collection.image.width }}"
                   height="{{ collection.image.height }}"
                   loading="lazy">
            {% else %}
              {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'card-img-top' }}
            {% endif %}
          </a>
          <div class="card-body d-flex flex-column">
            <h2 class="card-title">{{ collection.title }}</h2>
            <div class="card-text rte">
              {{ collection.description | truncatewords: 20 }}
            </div>
            <a href="{{ routes.collections_url }}/{{ collection.handle }}" class="btn btn-primary mt-auto">View Services</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .list-collections-section .card-title {
    font-size: {{ section.settings.title_font_size }}px !important;
    line-height: {{ section.settings.title_line_height }} !important;
    text-transform: {{ section.settings.title_text_transform }} !important;
  }
  
  .list-collections-section .row.alignment-flex-start {
    justify-content: flex-start !important;
  }
  
  .list-collections-section .row.alignment-center {
    justify-content: center !important;
  }
  
  .list-collections-section .row.alignment-flex-end {
    justify-content: flex-end !important;
  }
  
  /* Center single card */
  .list-collections-section .row.single-card {
    justify-content: center !important;
  }
</style>

{% schema %}
{
  "name": "List Collections",
  "settings": [
    {
      "type": "text",
      "id": "subheading_text",
      "label": "Subheading Text",
      "default": "Discover our collection of"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Card Title Font Size",
      "min": 12,
      "max": 48,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "title_line_height",
      "label": "Card Title Line Height",
      "min": 1,
      "max": 3,
      "step": 0.1,
      "default": 1.2
    },
    {
      "type": "select",
      "id": "title_text_transform",
      "label": "Card Title Text Transform",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "none"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "Number of Cards on Mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "label": "Number of Cards on Tablet",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Number of Cards on Desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Card Alignment",
      "info": "When there is only one card, it will be centered automatically",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "flex-start"
    }
  ],
  "presets": [
    {
      "name": "List Collections"
    }
  ]
}
{% endschema %}
