{% render 'footer-content', section: section %}

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "social_media",
      "name": "Social Media",
      "settings": [
        {
          "type": "select",
          "id": "platform",
          "label": "Platform",
          "options": [
            {
              "value": "whatsapp",
              "label": "WhatsApp"
            },
            {
              "value": "instagram",
              "label": "Instagram"
            },
            {
              "value": "facebook",
              "label": "Facebook"
            },
            {
              "value": "youtube",
              "label": "YouTube"
            },
            {
              "value": "twitter",
              "label": "Twitter/X"
            },
            {
              "value": "tiktok",
              "label": "TikTok"
            },
            {
              "value": "linkedin",
              "label": "LinkedIn"
            },
            {
              "value": "pinterest",
              "label": "Pinterest"
            },
            {
              "value": "snapchat",
              "label": "Snapchat"
            }
          ],
          "default": "instagram"
        },
        {
          "type": "url",
          "id": "social_url",
          "label": "Profile URL",
          "info": "Link to your profile on this platform"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Number of Columns on Desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "info": "Number of footer sections per row on desktop"
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "label": "Number of Columns on Tablet",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2,
      "info": "Number of footer sections per row on tablet"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "label": "Number of Columns on Mobile",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1,
      "info": "Number of footer sections per row on mobile"
    },
    {
      "type": "header",
      "content": "Footer Styling"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Background Color",
      "default": "#6B4C93"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text Color",
      "default": "#FFFFFF",
      "info": "Color for headings and text"
    },
    {
      "type": "range",
      "id": "footer_vertical_padding",
      "label": "Vertical Padding (px)",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 60,
      "unit": "px",
      "info": "Top and bottom padding"
    },
    {
      "type": "header",
      "content": "Social Media Section"
    },
    {
      "type": "text",
      "id": "social_heading",
      "label": "Social Media Heading",
      "default": "Follow us"
    },
    {
      "type": "range",
      "id": "social_heading_font_size",
      "label": "Social Heading Font Size (px)",
      "min": 14,
      "max": 32,
      "step": 1,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "social_heading_font_weight",
      "label": "Social Heading Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "header",
      "content": "Newsletter Section"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Heading",
      "default": "Subscribe to newsletter"
    },
    {
      "type": "range",
      "id": "newsletter_heading_font_size",
      "label": "Newsletter Heading Font Size (px)",
      "min": 14,
      "max": 32,
      "step": 1,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "newsletter_heading_font_weight",
      "label": "Newsletter Heading Font Weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Newsletter Button Text",
      "default": "SIGN UP"
    },
    {
      "type": "color",
      "id": "newsletter_button_color",
      "label": "Newsletter Button Background Color",
      "default": "#FFD700"
    },
    {
      "type": "color",
      "id": "newsletter_button_text_color",
      "label": "Newsletter Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Navigation Links Styling"
    },
    {
      "type": "color",
      "id": "footer_link_color",
      "label": "Link Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "footer_link_hover_color",
      "label": "Link Hover Color",
      "default": "#FFFFFF",
      "info": "Color when hovering over links"
    },
    {
      "type": "range",
      "id": "footer_link_font_size",
      "label": "Link Font Size (px)",
      "min": 10,
      "max": 20,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "footer_link_font_weight",
      "label": "Link Font Weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi Bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    }
  ]
}
{% endschema %}
