{% render 'footer-content' %}

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Follow us on instagram!"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Background Color",
      "default": "#EAE7E0"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text Color",
      "default": "#6B5B4F"
    },
    {
      "type": "select",
      "id": "footer_font_family",
      "label": "Font Family",
      "options": [
        {
          "value": "serif",
          "label": "Serif (Playfair Display)"
        },
        {
          "value": "sans-serif",
          "label": "Sans-serif (Default)"
        }
      ],
      "default": "serif"
    },
    {
      "type": "range",
      "id": "footer_font_size",
      "label": "Font Size (px)",
      "min": 14,
      "max": 32,
      "step": 1,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_underline",
      "label": "Show Underline",
      "default": true
    },
    {
      "type": "range",
      "id": "footer_vertical_padding",
      "label": "Vertical Padding (px)",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px",
      "info": "Top and bottom padding"
    }
  ]
}
{% endschema %}
