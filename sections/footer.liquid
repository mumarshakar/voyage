{% render 'footer-content', section: section %}

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "social_media",
      "name": "Social Media",
      "settings": [
        {
          "type": "select",
          "id": "platform",
          "label": "Platform",
          "options": [
            {
              "value": "instagram",
              "label": "Instagram"
            },
            {
              "value": "facebook",
              "label": "Facebook"
            },
            {
              "value": "youtube",
              "label": "YouTube"
            },
            {
              "value": "twitter",
              "label": "Twitter/X"
            },
            {
              "value": "tiktok",
              "label": "TikTok"
            },
            {
              "value": "linkedin",
              "label": "LinkedIn"
            },
            {
              "value": "pinterest",
              "label": "Pinterest"
            },
            {
              "value": "snapchat",
              "label": "Snapchat"
            }
          ],
          "default": "instagram"
        },
        {
          "type": "url",
          "id": "social_url",
          "label": "Profile URL",
          "info": "Link to your profile on this platform"
        },
        {
          "type": "image_picker",
          "id": "custom_icon",
          "label": "Custom Icon",
          "info": "Upload custom icon. Leave empty to use default platform icon."
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Social Media Icons"
    },
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Join our community",
      "info": "Text displayed above the social media icons"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "min": 14,
      "max": 48,
      "step": 2,
      "default": 24,
      "unit": "px",
      "info": "Font size for the heading text"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading Alignment",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "info": "Alignment of the heading text"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size - Desktop (px)",
      "min": 24,
      "max": 80,
      "step": 2,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_size_mobile",
      "label": "Icon Size - Mobile (px)",
      "min": 24,
      "max": 60,
      "step": 2,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_gap",
      "label": "Spacing Between Icons (px)",
      "min": 8,
      "max": 40,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "icon_alignment",
      "label": "Icon Alignment",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Footer Styling"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Background Color",
      "default": "#EAE7E0"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text Color",
      "default": "#6B5B4F",
      "info": "Used for placeholder icons if custom icons not provided"
    },
    {
      "type": "range",
      "id": "footer_vertical_padding",
      "label": "Vertical Padding (px)",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px",
      "info": "Top and bottom padding"
    }
  ]
}
{% endschema %}
