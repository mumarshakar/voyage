{% render 'footer-content' %}

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Content"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "Your trusted partner for all your travel booking needs. Experience seamless booking with us."
    },
    {
      "type": "text",
      "id": "footer_email",
      "label": "Email Address",
      "default": "info@voyagebyhype.com"
    },
    {
      "type": "text",
      "id": "footer_phone",
      "label": "Phone Number",
      "default": "+1 (555) 123-4567"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer",
      "info": "Select a menu to display in the footer"
    },
    {
      "type": "header",
      "content": "Footer Styling"
    },
    {
      "type": "color",
      "id": "footer_bg_color",
      "label": "Background Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "footer_title_color",
      "label": "Title Color",
      "default": "#FF6B35"
    },
    {
      "type": "color",
      "id": "footer_link_color",
      "label": "Link Color",
      "default": "rgba(255, 255, 255, 0.5)"
    },
    {
      "type": "color",
      "id": "footer_link_hover_color",
      "label": "Link Hover Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "footer_padding_top",
      "label": "Top Padding (px)",
      "min": 20,
      "max": 100,
      "step": 10,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "footer_padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 10,
      "max": 50,
      "step": 5,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "footer_title_font_size",
      "label": "Title Font Size (px)",
      "min": 16,
      "max": 32,
      "step": 2,
      "default": 18,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "footer_text_font_size",
      "label": "Text Font Size (px)",
      "min": 12,
      "max": 18,
      "step": 1,
      "default": 14,
      "unit": "px"
    }
  ]
}
{% endschema %}

