{% schema %}
{
  "name": "About Values",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon Class",
          "default": "bi-shield-check"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Values",
      "blocks": [
        {
          "type": "value",
          "settings": {
            "icon": "bi-shield-check",
            "title": "Trusted & Reliable",
            "description": "We've served thousands of customers"
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "bi-clock",
            "title": "24/7 Support",
            "description": "Always here to help you"
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "bi-graph-up",
            "title": "Best Prices",
            "description": "Competitive prices always"
          }
        },
        {
          "type": "value",
          "settings": {
            "icon": "bi-globe",
            "title": "Global Reach",
            "description": "Worldwide coverage"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="values-section" style="padding: 80px 0;">
  <div class="container">
    <h2 class="text-center mb-5" style="font-size: 2.5rem; font-weight: bold; color: #333;">{{ section.settings.title }}</h2>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-6">
          <div class="value-item">
            <i class="bi {{ block.settings.icon }} value-icon"></i>
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .value-item {
    padding: 2rem;
    margin-bottom: 2rem;
  }
  
  .value-icon {
    font-size: 2.5rem;
    color: var(--primary-orange);
    margin-bottom: 1rem;
  }
</style>

