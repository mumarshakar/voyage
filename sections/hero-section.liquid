{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "A WELLNESS EXPERIENCE."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Your perfect journey starts here. Book your next adventure with ease."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "BOOK YOUR GLOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Background Media"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Background Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Used when background type is Image"
    },
    {
      "type": "select",
      "id": "video_source_type",
      "label": "Video Source",
      "options": [
        {
          "value": "upload",
          "label": "Upload to Shopify"
        },
        {
          "value": "url",
          "label": "External URL (YouTube, Vimeo, etc.)"
        }
      ],
      "default": "upload",
      "info": "Choose how to provide the video"
    },
    {
      "type": "video",
      "id": "background_video_desktop",
      "label": "Desktop Background Video",
      "info": "Upload MP4 video for desktop (max 1GB, H.264 codec recommended)"
    },
    {
      "type": "text",
      "id": "background_video_desktop_url",
      "label": "Desktop Video URL",
      "info": "Direct video URL (e.g., https://example.com/video.mp4) or YouTube/Vimeo embed URL"
    },
    {
      "type": "video",
      "id": "background_video_mobile",
      "label": "Mobile Background Video",
      "info": "Upload MP4 video for mobile (optional, falls back to desktop if not set)"
    },
    {
      "type": "text",
      "id": "background_video_mobile_url",
      "label": "Mobile Video URL",
      "info": "Direct video URL for mobile (optional)"
    },
    {
      "type": "checkbox",
      "id": "video_autoplay",
      "label": "Autoplay Video",
      "default": true,
      "info": "Video will autoplay and loop"
    },
    {
      "type": "checkbox",
      "id": "video_muted",
      "label": "Mute Video",
      "default": true,
      "info": "Video will be muted (required for autoplay in most browsers)"
    },
    {
      "type": "select",
      "id": "variation",
      "label": "Hero Style",
      "options": [
        {
          "value": "glow",
          "label": "Glow Deck Style"
        },
        {
          "value": "style1",
          "label": "Style 1 - Classic"
        },
        {
          "value": "style2",
          "label": "Style 2 - Orange Gradient"
        },
        {
          "value": "style3",
          "label": "Style 3 - Cream Background"
        },
        {
          "value": "style4",
          "label": "Style 4 - Bold Gradient"
        },
        {
          "value": "style5",
          "label": "Style 5 - Minimal"
        }
      ],
      "default": "glow"
    },
    {
      "type": "header",
      "content": "Hero Section Layout"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Hero Height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "vh"
    },
    {
      "type": "select",
      "id": "background_position",
      "label": "Background Image Position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "background_size",
      "label": "Background Image Size",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover"
    },
    {
      "type": "header",
      "content": "Title Settings"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#8B6F47"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title Font Size (px)",
      "min": 24,
      "max": 72,
      "step": 2,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_position_top",
      "label": "Title Position from Top (%)",
      "min": 5,
      "max": 50,
      "step": 1,
      "default": 20,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#8B6F47"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "button_opacity",
      "label": "Button Background Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 70,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "button_position_bottom",
      "label": "Button Position from Bottom (%)",
      "min": 5,
      "max": 30,
      "step": 1,
      "default": 15,
      "unit": "%"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "label": "Button Font Size (px)",
      "min": 12,
      "max": 24,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_padding_horizontal",
      "label": "Button Horizontal Padding (px)",
      "min": 16,
      "max": 64,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_padding_vertical",
      "label": "Button Vertical Padding (px)",
      "min": 8,
      "max": 32,
      "step": 2,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 0,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Bottom Margin (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 0,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

{% if section.settings.variation == 'glow' %}
  {%- liquid
    assign hero_height = section.settings.hero_height | default: 100
    assign bg_position = section.settings.background_position | default: 'center'
    assign bg_size = section.settings.background_size | default: 'cover'
    assign title_color = section.settings.title_color | default: '#8B6F47'
    assign title_font_size = section.settings.title_font_size | default: 40
    assign title_position_top = section.settings.title_position_top | default: 20
    assign text_align = section.settings.text_alignment | default: 'center'
    assign button_text_color = section.settings.button_text_color | default: '#8B6F47'
    assign button_bg_color = section.settings.button_bg_color | default: '#FFFFFF'
    assign button_opacity = section.settings.button_opacity | default: 70
    assign button_position_bottom = section.settings.button_position_bottom | default: 15
    assign button_font_size = section.settings.button_font_size | default: 16
    assign button_padding_h = section.settings.button_padding_horizontal | default: 32
    assign button_padding_v = section.settings.button_padding_vertical | default: 14
    assign overlay_color = section.settings.overlay_color | default: '#000000'
    assign overlay_opacity = section.settings.overlay_opacity | default: 0
    assign padding_top = section.settings.padding_top | default: 120
    assign padding_bottom = section.settings.padding_bottom | default: 80
    assign padding_horizontal = section.settings.padding_horizontal | default: 20
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
    assign background_type = section.settings.background_type | default: 'image'
    assign video_source_type = section.settings.video_source_type | default: 'upload'
    assign video_autoplay = section.settings.video_autoplay | default: true
    assign video_muted = section.settings.video_muted | default: true
    
    if button_opacity > 0
      assign button_opacity_decimal = button_opacity | divided_by: 100.0
    else
      assign button_opacity_decimal = 0
    endif
    if overlay_opacity > 0
      assign overlay_opacity_decimal = overlay_opacity | divided_by: 100.0
    else
      assign overlay_opacity_decimal = 0
    endif
  -%}
  
  <section class="hero-section hero-glow" 
           style="min-height: {{ hero_height }}vh;
                  {% if background_type == 'image' and section.settings.background_image != blank %}background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');{% endif %}
                  background-position: {{ bg_position }};
                  background-size: {{ bg_size }};
                  padding-top: {{ padding_top }}px;
                  padding-bottom: {{ padding_bottom }}px;
                  padding-left: {{ padding_horizontal }}px;
                  padding-right: {{ padding_horizontal }}px;
                  margin-top: {{ margin_top }}px;
                  margin-bottom: {{ margin_bottom }}px;
                  position: relative;
                  overflow: hidden;">
    {% if background_type == 'video' %}
      {%- liquid
        if video_source_type == 'upload'
          assign desktop_video = section.settings.background_video_desktop
          assign mobile_video = section.settings.background_video_mobile
        else
          assign desktop_video_url = section.settings.background_video_desktop_url
          assign mobile_video_url = section.settings.background_video_mobile_url
        endif
      -%}
      
      {% if video_source_type == 'upload' and desktop_video != blank %}
        <div class="hero-video-container">
          {% if mobile_video != blank %}
            <video class="hero-video hero-video-mobile" 
                   playsinline 
                   {% if video_autoplay %}autoplay{% endif %} 
                   {% if video_muted %}muted{% endif %} 
                   loop 
                   preload="metadata">
              {% for source in mobile_video.sources %}
                <source src="{{ source.url }}" type="{{ source.mime_type }}">
              {% endfor %}
            </video>
          {% endif %}
          <video class="hero-video hero-video-desktop" 
                 playsinline 
                 {% if video_autoplay %}autoplay{% endif %} 
                 {% if video_muted %}muted{% endif %} 
                 loop 
                 preload="metadata">
            {% for source in desktop_video.sources %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endfor %}
          </video>
        </div>
      {% elsif video_source_type == 'url' and desktop_video_url != blank %}
        <div class="hero-video-container">
          {% if mobile_video_url != blank %}
            <video class="hero-video hero-video-mobile" 
                   playsinline 
                   {% if video_autoplay %}autoplay{% endif %} 
                   {% if video_muted %}muted{% endif %} 
                   loop 
                   preload="metadata">
              <source src="{{ mobile_video_url }}" type="video/mp4">
            </video>
          {% endif %}
          <video class="hero-video hero-video-desktop" 
                 playsinline 
                 {% if video_autoplay %}autoplay{% endif %} 
                 {% if video_muted %}muted{% endif %} 
                 loop 
                 preload="metadata">
            <source src="{{ desktop_video_url }}" type="video/mp4">
          </video>
        </div>
      {% endif %}
    {% endif %}
    {% if overlay_opacity > 0 %}
      <div class="hero-overlay" style="background-color: {{ overlay_color }}; opacity: {{ overlay_opacity_decimal }};"></div>
    {% endif %}
    <div class="hero-glow-content" style="text-align: {{ text_align }};">
      <h1 class="hero-glow-title" 
          style="color: {{ title_color }};
                 font-size: {{ title_font_size }}px;
                 margin-top: {{ title_position_top }}%;">
        {{ section.settings.title }}
      </h1>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" 
           class="btn-glow-cta"
           style="color: {{ button_text_color }};
                  --btn-bg-color: {{ button_bg_color }};
                  --btn-opacity: {{ button_opacity_decimal }};
                  font-size: {{ button_font_size }}px;
                  padding: {{ button_padding_v }}px {{ button_padding_h }}px;
                  margin-bottom: {{ button_position_bottom }}%;">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </section>

{% elsif section.settings.variation == 'style1' %}
  {%- liquid
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
  -%}
  <section class="hero-section" id="hero_main" style="{{section.settings.hero_main}}; margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;">
  
    <div class="container">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <h2>I am testing github pushes</h2>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-lg px-5 py-3">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </section>

{% elsif section.settings.variation == 'style2' %}
  {%- liquid
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
  -%}
  <section class="hero-section hero-style2" style="margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;">
    <div class="container">
      <h1 class="hero-title text-white">{{ section.settings.title }}</h1>
      <p class="hero-subtitle text-white">{{ section.settings.subtitle }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-light btn-lg px-5 py-3">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </section>

{% elsif section.settings.variation == 'style3' %}
  {%- liquid
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
  -%}
  <section class="hero-section" style="margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;">
    <div class="container">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      {% if section.settings.button_link != blank %}
        <div class="d-flex gap-3 justify-content-center flex-wrap">
          <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-lg px-5 py-3">{{ section.settings.button_text }}</a>
        </div>
      {% endif %}
    </div>
  </section>

{% elsif section.settings.variation == 'style4' %}
  {%- liquid
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
  -%}
  <section class="hero-section hero-style4" style="margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;">
    <div class="container">
      <h1 class="hero-title text-white">{{ section.settings.title }}</h1>
      <p class="hero-subtitle text-white">{{ section.settings.subtitle }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-light btn-lg px-5 py-3">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </section>

{% else %}
  {%- liquid
    assign margin_top = section.settings.margin_top | default: 0
    assign margin_bottom = section.settings.margin_bottom | default: 0
  -%}
  <section class="hero-section" style="margin-top: {{ margin_top }}px; margin-bottom: {{ margin_bottom }}px;">
    <div class="container">
      <h1 class="hero-title">{{ section.settings.title }}</h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-lg px-5 py-3">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </section>
{% endif %}

