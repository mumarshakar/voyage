<div class="meet-the-team py-5">
  <div class="container">
    <h2 class="text-center mb-5">{{ section.settings.title }}</h2>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="flip-card">
            <div class="flip-card-inner">

              <!-- Front -->
              <div class="flip-card-front text-center">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: '400x250' }}" alt="{{ block.settings.name }}">
                {% else %}
                  <img src="https://via.placeholder.com/400x250" alt="Placeholder Image">
                {% endif %}
                <h5 class="mt-3 mb-0">{{ block.settings.name }}</h5>
                <p class="text-muted">{{ block.settings.designation }}</p>
              </div>

              <!-- Back -->
              <div class="flip-card-back d-flex align-items-center">
                <p>
                  {{ block.settings.info }}
                </p>
              </div>

            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Meet Team",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Designation"
        },
        {
          "type": "textarea",
          "id": "info",
          "label": "Information",
          "default": "Add some information about the team member here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Team"
    }
  ]
}
{% endschema %}