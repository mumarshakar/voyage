<div class="meet-the-team">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div class="team-members">
      {% for block in section.blocks %}
        <div class="team-member-card">
          <div class="card-inner">
            <div class="card-front">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url: '400x400' }}" alt="{{ block.settings.name }}">
              {% else %}
                <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
              {% endif %}
              <h3>{{ block.settings.name }}</h3>
              <p>{{ block.settings.designation }}</p>
            </div>
            <div class="card-back">
              <p>{{ block.settings.info }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Meet Team",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Designation"
        },
        {
          "type": "textarea",
          "id": "info",
          "label": "Information",
          "default": "Add some information about the team member here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Team"
    }
  ]
}
{% endschema %}