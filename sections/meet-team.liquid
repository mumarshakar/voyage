<div class="meet-the-team py-5">
  <div class="container">
    <h2 class="text-center mb-5">{{ section.settings.title }}</h2>
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="team-member-card">
            <div class="card-inner">
              <div class="card-front card h-100">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: '400x400' }}" class="card-img-top" alt="{{ block.settings.name }}">
                {% else %}
                  <div class="placeholder-image">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
                {% endif %}
                <div class="card-body text-center">
                  <h3 class="card-title h5">{{ block.settings.name }}</h3>
                  <p class="card-text">{{ block.settings.designation }}</p>
                </div>
              </div>
              <div class="card-back card h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center text-center">
                  <p class="card-text">{{ block.settings.info }}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Meet Team",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Designation"
        },
        {
          "type": "textarea",
          "id": "info",
          "label": "Information",
          "default": "Add some information about the team member here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Meet Team"
    }
  ]
}
{% endschema %}