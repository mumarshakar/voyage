{% stylesheet %}
.flip-card {
    background: transparent;
    width: 100%;
    height: 340px;
    perspective: 1000px;
}

.flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
}

.flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
}

.flip-card-front, 
.flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: {{ section.settings.card_border_radius }}px;
    background: #ffffff;
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
}

.flip-card-front img {
    height: {{ section.settings.image_height }}px;
    object-fit: cover;
    width: 100%;
    border-radius: {{ section.settings.image_border_radius }}px {{ section.settings.image_border_radius }}px 0 0;
}

.flip-card-front h5 {
    font-size: {{ section.settings.name_font_size }}px;
    font-weight: {{ section.settings.name_font_weight }};
    text-transform: {{ section.settings.name_text_transform }};
    letter-spacing: {{ section.settings.name_letter_spacing }}px;
}

.flip-card-front p {
    font-size: {{ section.settings.role_font_size }}px;
    font-weight: {{ section.settings.role_font_weight }};
    text-transform: {{ section.settings.role_text_transform }};
    letter-spacing: {{ section.settings.role_letter_spacing }}px;
}

.flip-card-back {
    transform: rotateY(180deg);
    background: #f8f9fa;
    padding: 20px;
}

.flip-card-back p {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    line-height: {{ section.settings.description_line_height }};
    letter-spacing: {{ section.settings.description_letter_spacing }}px;
}
{% endstylesheet %}

<div class="container py-5">
    <h2 class="text-center mb-5">{{ section.settings.heading }}</h2>

    <div class="row g-4">

        {% for block in section.blocks %}
        <div class="col-md-4" {{ block.shopify_attributes }}>
            <div class="flip-card">
                <div class="flip-card-inner">

                    <!-- Front -->
                    <div class="flip-card-front text-center">
                        {% if block.settings.image != blank %}
                            <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.name }}">
                        {% else %}
                            <img src="https://via.placeholder.com/400x250" alt="placeholder">
                        {% endif %}

                        <h5 class="mt-3 mb-0">{{ block.settings.name }}</h5>
                        <p class="text-muted">{{ block.settings.role }}</p>
                    </div>

                    <!-- Back -->
                    <div class="flip-card-back d-flex align-items-center">
                        <p>{{ block.settings.description }}</p>
                    </div>

                </div>
            </div>
        </div>
        {% endfor %}

    </div>
</div>

