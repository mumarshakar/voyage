          <div class="col-md-6 mb-3">
            <label for="hotelLocation" class="form-label">Destination</label>
            <input type="text" class="form-control" name="contact[location]" id="hotelLocation" placeholder="City or hotel name" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="checkIn" class="form-label">Check-in</label>
            <input type="date" class="form-control" name="contact[check_in]" id="checkIn" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="checkOut" class="form-label">Check-out</label>
            <input type="date" class="form-control" name="contact[check_out]" id="checkOut" required>
          </div>
        </div>
        <div class="mb-3">
          <label for="hotel_email" class="form-label">Your Email</label>
          <input type="email" class="form-control" name="contact[email]" id="hotel_email" required>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg px-5">Search Hotels</button>
        </div>
      </form>
    </div>
  </div>
  
  <div class="tab-pane fade" id="cars">
    <div class="booking-form">
      <h3 class="mb-4">Rent a Car</h3>
      <form action="/contact" method="post">
