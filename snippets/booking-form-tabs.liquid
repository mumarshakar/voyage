            <input type="text" class="form-control" name="contact[pickup_location]" id="pickupLocation" placeholder="City or airport" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="dropoffLocation" class="form-label">Drop-off Location</label>
            <input type="text" class="form-control" name="contact[dropoff_location]" id="dropoffLocation" placeholder="Same as pick-up">
          </div>
        </div>
        <div class="mb-3">
          <label for="car_email" class="form-label">Your Email</label>
          <input type="email" class="form-control" name="contact[email]" id="car_email" required>
