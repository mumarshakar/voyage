<div class="tab-content">
  <div class="tab-pane fade show active" id="flights">
    <div class="booking-form">
      <h3 class="mb-4">Search Flights</h3>
      <form action="/contact" method="post">
        <input type="hidden" name="form_type" value="contact">
        <input type="hidden" name="utf8" value="✓">
        <input type="hidden" name="contact[subject]" value="Flight Booking Request">
        
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="from" class="form-label">From</label>
            <input type="text" class="form-control" name="contact[from]" id="from" placeholder="Departure city" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="to" class="form-label">To</label>
            <input type="text" class="form-control" name="contact[to]" id="to" placeholder="Destination city" required>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="departDate" class="form-label">Departure Date</label>
            <input type="date" class="form-control" name="contact[depart_date]" id="departDate" required>
          </div>
          <div class="col-md-4 mb-3">
            <label for="returnDate" class="form-label">Return Date</label>
            <input type="date" class="form-control" name="contact[return_date]" id="returnDate">
          </div>
          <div class="col-md-4 mb-3">
            <label for="passengers" class="form-label">Passengers</label>
            <select class="form-select" name="contact[passengers]" id="passengers">
              <option value="1">1 Passenger</option>
              <option value="2" selected>2 Passengers</option>
              <option value="3">3 Passengers</option>
              <option value="4">4+ Passengers</option>
            </select>
          </div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Your Email</label>
          <input type="email" class="form-control" name="contact[email]" id="email" required>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg px-5">Search Flights</button>
        </div>
      </form>
    </div>
  </div>
  
