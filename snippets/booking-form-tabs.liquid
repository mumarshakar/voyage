            <input type="text" class="form-control" name="contact[destination]" id="packageDestination" placeholder="Where do you want to go?" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="packageDuration" class="form-label">Duration</label>
            <select class="form-select" name="contact[duration]" id="packageDuration">
              <option value="3">3 Days</option>
              <option value="5">5 Days</option>
              <option value="7" selected>7 Days</option>
              <option value="10">10 Days</option>
            </select>
          </div>
        </div>
        <div class="mb-3">
